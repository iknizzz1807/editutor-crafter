init: {
  shape: circle
  style.fill: "#3fb950"
  style.stroke: "#2da44e"
  style.stroke-width: 2
  label: ""
}

idle: Idle {
  style.fill: "#1a1a2e"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
  style.border-radius: 8
}
processing: Processing Block {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  style.bold: true
  style.border-radius: 8
}
waiting: Waiting for Next Block {
  style.fill: "#1a1a2e"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
  style.border-radius: 8
}
final: Final (Padding) {
  style.fill: "#1a1a2e"
  style.stroke: "#e34c26"
  style.font-color: "#e6edf3"
  style.border-radius: 8
  style.double-border: true
}

init -> idle: "Initialize"
idle -> processing: "Data input\n(encrypt/decrypt)"
processing -> waiting: "Block processed"
waiting -> processing: "Next block available"
waiting -> final: "End of input\n(finalization)"
final -> idle: "Operation complete" {
  style.stroke: "#3fb950"
}