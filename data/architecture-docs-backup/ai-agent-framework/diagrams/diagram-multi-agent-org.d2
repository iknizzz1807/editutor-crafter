title: Multi-Agent Hierarchical Orchestration

classes: {
  dark_container: {
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  dark_component: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  broadcast_edge: {
    style.stroke: "#3fb950"
    style.stroke-width: 2
    style.font-color: "#8b949e"
  }
}

orchestrator: Orchestrator Agent {
  class: dark_component
  style.font-size: 24
  style.bold: true
  shape: circle
  width: 120
  height: 120
}

workers: Worker Agents {
  class: dark_container
  shape: rectangle
  direction: right
  style.double-border: true
  
  researcher: Researcher {
    class: dark_component
    shape: rectangle
    width: 100
    height: 80
  }
  
  writer: Writer {
    class: dark_component
    shape: rectangle
    width: 100
    height: 80
  }
  
  coder: Coder {
    class: dark_component
    shape: rectangle
    width: 100
    height: 80
  }
}

orchestrator -> researcher: "task assignment" { class: broadcast_edge }
orchestrator -> writer: "task assignment" { class: broadcast_edge }
orchestrator -> coder: "task assignment" { class: broadcast_edge }

note: |md
  ## Broadcast Message Flow
  The Orchestrator agent broadcasts task assignments
  to all specialized Worker agents simultaneously.
| {
  shape: page
  class: dark_container
  style.font-size: 16
  near: bottom-center
}