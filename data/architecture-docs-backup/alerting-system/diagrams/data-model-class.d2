title: Data Model Class Diagram

classes: {
  dark_container: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  dark_class: {
    shape: class
    style.fill: "#16213e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
}

alert_system: Data Model {
  class: dark_container
  
  alert: Alert {
    class: dark_class
    label: "Alert\n- labels: Map<string, string>\n- state: AlertState\n- startsAt: datetime\n- endsAt: datetime\n- generatorURL: string\n- annotations: Map<string, string>"
  }
  
  rule: Rule {
    class: dark_class
    label: "Rule\n- name: string\n- query: string\n- duration: string\n- labels: Map<string, string>\n- annotations: Map<string, string>\n+ evaluate(): Alert[]"
  }
  
  group: Group {
    class: dark_class
    label: "Group\n- id: string\n- labels: Map<string, string>\n- receiver: string"
  }
  
  silence: Silence {
    class: dark_class
    label: "Silence\n- id: string\n- matchers: \"Matcher[]\"\n- startsAt: datetime\n- endsAt: datetime\n- createdBy: string\n- comment: string"
  }
  
  route: Route {
    class: dark_class
    label: "Route\n- receiver: string\n- matchers: \"Matcher[]\"\n- groupBy: \"string[]\"\n- groupWait: string\n- groupInterval: string\n- repeatInterval: string"
  }
  
  matcher: Matcher {
    class: dark_class
    label: "Matcher\n- name: string\n- value: string\n- isRegex: bool"
  }
}

# Relationships
alert_system.rule -> alert_system.alert: triggers {
  style.stroke: "#3fb950"
  style.bold: true
}

alert_system.group -> alert_system.alert: contains {
  style.stroke: "#3fb950"
}

alert_system.silence -> alert_system.alert: suppresses {
  style.stroke: "#8b949e"
}

alert_system.route -> alert_system.alert: directs {
  style.stroke: "#8b949e"
}

alert_system.silence -> alert_system.matcher: has {
  style.stroke: "#8b949e"
}

alert_system.route -> alert_system.matcher: has {
  style.stroke: "#8b949e"
}