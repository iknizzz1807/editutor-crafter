direction: down

title: Error Recovery Flowchart {
  style.font-size: 24
  style.fill: "#1a1a2e"
  style.font-color: "#e6edf3"
}

start: Start {
  shape: circle
  style.fill: "#3fb950"
  style.font-color: "#1a1a2e"
}

error_detected: Error Detected {
  shape: diamond
  style.fill: "#16213e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

error_type: Determine Error Type {
  shape: diamond
  style.fill: "#16213e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

parsing_errors: Parsing Errors {
  style.fill: "#0f3460"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  
  html_parse: HTML Parse Error {
    shape: diamond
    style.fill: "#16213e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  
  css_parse: CSS Parse Error {
    shape: diamond
    style.fill: "#16213e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  
  html_recovery: Apply Foster Parent Algorithm {
    style.fill: "#1a1a2e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  
  css_recovery: Skip Invalid Rules {
    style.fill: "#1a1a2e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
}

layout_errors: Layout Errors {
  style.fill: "#0f3460"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  
  box_model: Box Model Calculation Error {
    shape: diamond
    style.fill: "#16213e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  
  overflow: Content Overflow {
    shape: diamond
    style.fill: "#16213e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  
  fallback_dimensions: Use Default Dimensions {
    style.fill: "#1a1a2e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  
  clip_content: Clip/Scroll Content {
    style.fill: "#1a1a2e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
}

render_errors: Rendering Errors {
  style.fill: "#0f3460"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  
  font_load: Font Loading Failed {
    shape: diamond
    style.fill: "#16213e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  
  image_load: Image Loading Failed {
    shape: diamond
    style.fill: "#16213e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  
  fallback_font: Use System Font {
    style.fill: "#1a1a2e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  
  placeholder: Show Placeholder/Alt Text {
    style.fill: "#1a1a2e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
}

log_error: Log Error Details {
  style.fill: "#1a1a2e"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

continue_rendering: Continue Rendering {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  style.bold: true
}

complete: Graceful Completion {
  shape: circle
  style.fill: "#3fb950"
  style.font-color: "#1a1a2e"
}

start -> error_detected
error_detected -> error_type: Yes
error_detected -> complete: No Error

error_type -> parsing_errors.html_parse: HTML/CSS Parse
error_type -> layout_errors.box_model: Layout Issue
error_type -> render_errors.font_load: Render Failure

parsing_errors.html_parse -> parsing_errors.html_recovery: Malformed Tags
parsing_errors.html_parse -> parsing_errors.css_recovery: Invalid CSS
parsing_errors.css_parse -> parsing_errors.css_recovery: Invalid Rules

layout_errors.box_model -> layout_errors.fallback_dimensions: Invalid Dimensions
layout_errors.overflow -> layout_errors.clip_content: Content Too Large

render_errors.font_load -> render_errors.fallback_font: Font Unavailable
render_errors.image_load -> render_errors.placeholder: Image Unavailable

parsing_errors.html_recovery -> log_error
parsing_errors.css_recovery -> log_error
layout_errors.fallback_dimensions -> log_error
layout_errors.clip_content -> log_error
render_errors.fallback_font -> log_error
render_errors.placeholder -> log_error

log_error -> continue_rendering
continue_rendering -> complete