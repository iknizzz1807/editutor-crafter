direction: down

title: Command Processing Flow {
  style.font-size: 24
  style.font-color: "#e6edf3"
}

start: Start {
  shape: circle
  style.fill: "#3fb950"
  style.stroke: "#3fb950"
}

user_input: User Input {
  shape: rectangle
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

parser: Command Parser {
  shape: rectangle
  style.fill: "#16213e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  style.bold: true
}

parse_check: Valid Syntax? {
  shape: diamond
  style.fill: "#0f3460"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

validator: Command Validator {
  shape: rectangle
  style.fill: "#16213e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

validation_check: Valid Context? {
  shape: diamond
  style.fill: "#0f3460"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

dispatcher: Command Dispatcher {
  shape: rectangle
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  style.bold: true
}

components: Target Components {
  breakpoint_mgr: Breakpoint Manager {
    style.fill: "#16213e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  
  process_ctrl: Process Controller {
    style.fill: "#16213e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  
  symbol_table: Symbol Table {
    style.fill: "#16213e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  
  memory_inspector: Memory Inspector {
    style.fill: "#16213e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
}

error_handler: Error Handler {
  shape: rectangle
  style.fill: "#d63031"
  style.stroke: "#e17055"
  style.font-color: "#ffffff"
}

response: Command Response {
  shape: rectangle
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

output: Display Output {
  shape: rectangle
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

start -> user_input
user_input -> parser: raw command
parser -> parse_check: tokenized
parse_check -> validator: Yes
parse_check -> error_handler: No\n(syntax error)
validator -> validation_check: checked
validation_check -> dispatcher: Yes
validation_check -> error_handler: No\n(invalid context)
dispatcher -> components.breakpoint_mgr: break/watch commands
dispatcher -> components.process_ctrl: run/step/continue
dispatcher -> components.symbol_table: info/list commands
dispatcher -> components.memory_inspector: print/examine commands
components.breakpoint_mgr -> response: result
components.process_ctrl -> response: result
components.symbol_table -> response: result
components.memory_inspector -> response: result
error_handler -> response: error message
response -> output
output -> user_input: {style.stroke-dash: 5}