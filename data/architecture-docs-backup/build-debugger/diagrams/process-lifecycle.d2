direction: down

# Initial state
init: {
  shape: circle
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.stroke-width: 3
}

# Process states
created: Created {
  shape: oval
  style.fill: "#16213e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

attached: Attached {
  shape: oval
  style.fill: "#16213e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

running: Running {
  shape: oval
  style.fill: "#0f3460"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  style.bold: true
}

stopped: Stopped {
  shape: oval
  style.fill: "#16213e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

terminated: Terminated {
  shape: circle
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.stroke-width: 3
  style.font-color: "#e6edf3"
}

# State transitions
init -> created: process fork/exec {
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

created -> attached: PTRACE_ATTACH {
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

attached -> running: PTRACE_CONT {
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

running -> stopped: SIGTRAP/breakpoint {
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

running -> stopped: SIGSTOP/signal {
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

stopped -> running: PTRACE_CONT {
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

stopped -> running: PTRACE_SINGLESTEP {
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

running -> terminated: SIGKILL/exit {
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

stopped -> terminated: PTRACE_KILL {
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

attached -> terminated: PTRACE_DETACH {
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}