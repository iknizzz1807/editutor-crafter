terminal_dashboard: Terminal Dashboard {
  shape: rectangle
  style.fill: "#0a0e14"
  style.stroke: "#3fb950"
  style.stroke-width: 2
  style.font-color: "#e6edf3"

  layout: Screen Layout {
    shape: rectangle
    style.fill: "#0d1117"
    style.stroke: "#8b949e"
    style.stroke-dash: 2
    label: "80x24 Terminal Screen"

    histogram_region: Syscall Histogram {
      shape: rectangle
      style.fill: "#1a1a2e"
      style.stroke: "#1f6feb"
      style.bold: true
      width: 60
      height: 8
      label: "Syscall Frequency Histogram\n[Bars showing system call distribution]"
    }

    tcp_region: Top TCP Connections {
      shape: rectangle
      style.fill: "#1a1a2e"
      style.stroke: "#1f6feb"
      style.bold: true
      width: 30
      height: 8
      label: "Active TCP Connections\n[IP:Port ↔ IP:Port (State)]"
    }

    event_table: Event Counter Table {
      shape: rectangle
      style.fill: "#1a1a2e"
      style.stroke: "#1f6feb"
      style.bold: true
      width: 60
      height: 12
      label: "Event Counter Table\n│ Event Type │ Count │ Rate │ Delta │"
    }

    status_line: Control Status Line {
      shape: rectangle
      style.fill: "#161b22"
      style.stroke: "#3fb950"
      style.stroke-width: 3
      style.bold: true
      width: 80
      height: 2
      label: "[Q]uit [P]ause [F]ilter [L]og Level ▲▼ [H]elp | Tracing: ACTIVE | Events/sec: 1,234"
    }

    histogram_region -> tcp_region: ""
    histogram_region -> event_table: ""
    tcp_region -> event_table: ""
    event_table -> status_line: ""
  }
}

classes: {
  terminal_style: {
    style.fill: "#1a1a2e"
    style.stroke: "#1f6feb"
    style.font-color: "#e6edf3"
  }
}