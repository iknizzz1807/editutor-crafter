shape: sequence_diagram

Game Manager: {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  style.bold: true
}

Scene Manager: {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

Resource Manager: {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

Entity Manager: {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

Renderer: {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

Physics System: {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

Game Manager -> Scene Manager: requestSceneTransition(newSceneId) {
  style.stroke: "#8b949e"
}

Scene Manager -> Entity Manager: pauseEntityUpdates() {
  style.stroke: "#8b949e"
}

Scene Manager -> Physics System: pauseSimulation() {
  style.stroke: "#8b949e"
}

Scene Manager -> Entity Manager: destroyAllEntities() {
  style.stroke: "#8b949e"
}

Entity Manager -> Resource Manager: releaseEntityResources() {
  style.stroke: "#8b949e"
}

Scene Manager -> Renderer: clearRenderQueue() {
  style.stroke: "#8b949e"
}

Scene Manager -> Resource Manager: unloadSceneResources(currentScene) {
  style.stroke: "#8b949e"
}

Resource Manager -> Resource Manager: freeTextures(), freeMeshes(), freeAudio() {
  style.stroke: "#d63031"
}

Scene Manager -> Resource Manager: loadSceneResources(newScene) {
  style.stroke: "#8b949e"
}

Resource Manager -> Resource Manager: loadTextures(), loadMeshes(), loadAudio() {
  style.stroke: "#3fb950"
}

Scene Manager -> Entity Manager: createSceneEntities(sceneData) {
  style.stroke: "#8b949e"
}

Entity Manager -> Resource Manager: bindEntityResources() {
  style.stroke: "#8b949e"
}

Scene Manager -> Physics System: initializePhysicsWorld() {
  style.stroke: "#8b949e"
}

Scene Manager -> Renderer: setupSceneCamera() {
  style.stroke: "#8b949e"
}

Scene Manager -> Entity Manager: resumeEntityUpdates() {
  style.stroke: "#8b949e"
}

Scene Manager -> Physics System: resumeSimulation() {
  style.stroke: "#8b949e"
}

Scene Manager -> Game Manager: sceneTransitionComplete() {
  style.stroke: "#3fb950"
  style.bold: true
}