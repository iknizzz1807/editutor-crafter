title: Type System Class Diagram

type_system: {
  base_type: {
    shape: class
    label: GraphQLType
    name: string
    "description?": string
  }

  scalar_type: {
    shape: class
    label: ScalarType
    "serialize": "(value) => any"
    "parseValue": "(value) => any"
    "parseLiteral": "(ast) => any"
  }

  object_type: {
    shape: class
    label: ObjectType
    "fields": "Map<string, GraphQLField>"
    "interfaces": "InterfaceType[]"
    "isTypeOf?": "(value) => boolean"
  }

  interface_type: {
    shape: class
    label: InterfaceType
    "fields": "Map<string, GraphQLField>"
    "implementations": "ObjectType[]"
    "resolveType?": "(value) => GraphQLObjectType"
  }

  union_type: {
    shape: class
    label: UnionType
    "types": "ObjectType[]"
    "resolveType?": "(value) => GraphQLObjectType"
  }

  enum_type: {
    shape: class
    label: EnumType
    "values": "EnumValue[]"
  }

  input_object_type: {
    shape: class
    label: InputObjectType
    "fields": "Map<string, GraphQLInputField>"
  }
}

wrappers: {
  list_type: {
    shape: class
    label: ListType
    ofType: GraphQLType
  }

  non_null_type: {
    shape: class
    label: NonNullType
    ofType: GraphQLType
  }
}

field_definitions: {
  field: {
    shape: class
    label: GraphQLField
    name: string
    type: GraphQLType
    "args": "GraphQLArgument[]"
    "resolve?": "(source, args, context, info) => any"
    "subscribe?": "(source, args, context, info) => any"
    "deprecationReason?": string
  }

  input_field: {
    shape: class
    label: GraphQLInputField
    name: string
    type: GraphQLType
    "defaultValue?": any
  }

  argument: {
    shape: class
    label: GraphQLArgument
    name: string
    type: GraphQLType
    "defaultValue?": any
  }

  enum_value: {
    shape: class
    label: EnumValue
    name: string
    value: any
    "deprecationReason?": string
  }
}

type_system.base_type -> type_system.scalar_type: extends
type_system.base_type -> type_system.object_type: extends
type_system.base_type -> type_system.interface_type: extends
type_system.base_type -> type_system.union_type: extends
type_system.base_type -> type_system.enum_type: extends
type_system.base_type -> type_system.input_object_type: extends
type_system.base_type -> wrappers.list_type: extends
type_system.base_type -> wrappers.non_null_type: extends

type_system.object_type -> field_definitions.field: fields
type_system.interface_type -> field_definitions.field: fields
type_system.input_object_type -> field_definitions.input_field: fields
field_definitions.field -> field_definitions.argument: args

type_system.style: {
  fill: "#1a1a2e"
  stroke: "#3fb950"
  font-color: "#e6edf3"
}

wrappers.style: {
  fill: "#16213e"
  stroke: "#3fb950"
  font-color: "#e6edf3"
}

field_definitions.style: {
  fill: "#0f3460"
  stroke: "#3fb950"
  font-color: "#e6edf3"
}

type_system.base_type.style: {
  bold: true
  stroke: "#3fb950"
  stroke-width: 2
}
