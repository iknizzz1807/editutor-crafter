    }
  }

  Ready: {
    shape: circle
    style: {
      fill: "#0f3460"
      stroke: "#3fb950"
    }
  }

  Running: {
    shape: circle
    style: {
      fill: "#0f3460"
      stroke: "#3fb950"
      bold: true
    }
  }

  Blocked: {
    shape: circle
    style: {
      fill: "#0f3460"
      stroke: "#3fb950"
    }
  }

  Terminated: {
    shape: circle
    style: {
      fill: "#0f3460"
      stroke: "#3fb950"
      font-color: "#ffffff"
      stroke-width: 3
    }
  }

  # Transitions
  initial -> New

  New -> Ready: scheduled
  Ready -> Running: dispatch
  Running -> Ready: preempted\n(time slice expired)
  Running -> Blocked: I/O request\n(wait for resource)
  Blocked -> Ready: I/O complete
  Running -> Terminated: exit\n(process completes)
  
  # Styling for transitions
  style edges: {
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
