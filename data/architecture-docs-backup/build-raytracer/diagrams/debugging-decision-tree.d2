diagnostic_modes: Apply Debug Rendering Modes {
  shape: rectangle
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  style.bold: true
}

black_checks: Black Image Diagnostics {
  ray_gen: Check Ray Generation
  intersection: Check Ray-Object Intersection
  camera: Verify Camera Setup
  output: Test Output Pipeline
  
  ray_gen -> intersection: rays valid?
  intersection -> camera: hits detected?
  camera -> output: projection correct?
}

noise_checks: Noise Diagnostics {
  samples: Check Sample Count
  convergence: Test Convergence Rate
  random: Verify Random Number Generation
  accumulation: Check Sample Accumulation
  
  samples -> convergence: sufficient samples?
  convergence -> random: stable result?
  random -> accumulation: good distribution?
}

color_checks: Color Diagnostics {
  normals: Render Normal Vectors
  materials: Test Material Properties
  lighting: Check Light Calculations
  gamma: Verify Gamma Correction
  
  normals -> materials: geometry correct?
  materials -> lighting: BRDF working?
  lighting -> gamma: illumination right?
}

shadow_checks: Shadow Diagnostics {
  bias: Check Shadow Ray Bias
  precision: Test Numerical Precision
  acne: Look for Shadow Acne
  leaks: Check for Light Leaks
  
  bias -> precision: offset correct?
  precision -> acne: stable intersections?
  acne -> leaks: clean shadows?
}

verify_fix: Verify Fix Applied {
  shape: diamond
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

success: Bug Fixed! {
  shape: oval
  style.fill: "#16213e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  style.bold: true
}

iterate: Continue Debugging {
  shape: rectangle
  style.fill: "#1a1a2e"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

start -> symptom_check

symptom_check -> black_image: black/no output
symptom_check -> noisy_render: grainy/speckled
symptom_check -> wrong_colors: incorrect appearance
symptom_check -> shadow_artifacts: shadow problems

black_image -> black_checks
noisy_render -> noise_checks
wrong_colors -> color_checks
shadow_artifacts -> shadow_checks

black_checks -> diagnostic_modes
noise_checks -> diagnostic_modes
color_checks -> diagnostic_modes
shadow_checks -> diagnostic_modes

diagnostic_modes -> verify_fix

verify_fix -> success: problem resolved
verify_fix -> iterate: issue persists

iterate -> symptom_check