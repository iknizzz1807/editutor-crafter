direction: right

title: "NFA to DFA Subset Construction" {
  style.font-size: 24
  style.bold: true
  style.font-color: "#e6edf3"
}

nfa_section: "Original NFA" {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  
  q0: "q0" {
    shape: circle
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  q1: "q1" {
    shape: circle
    style.fill: "#0f3460"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  q2: "q2" {
    shape: circle
    style.fill: "#0f3460"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  q3: "q3" {
    shape: circle
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.double-border: true
  }
  
  q0 -> q1: "a" {
    style.stroke: "#8b949e"
  }
  q0 -> q2: "a" {
    style.stroke: "#8b949e"
  }
  q1 -> q3: "b" {
    style.stroke: "#8b949e"
  }
  q2 -> q3: "c" {
    style.stroke: "#8b949e"
  }
}

construction_process: "Subset Construction Process" {
  style.fill: "#16213e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  
  step1: "Start State\n{q0}" {
    shape: rectangle
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  
  step2: "δ({q0}, 'a')\n= {q1, q2}" {
    shape: rectangle
    style.fill: "#0f3460"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  
  step3: "δ({q1,q2}, 'b')\n= {q3}" {
    shape: rectangle
    style.fill: "#0f3460"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  
  step4: "δ({q1,q2}, 'c')\n= {q3}" {
    shape: rectangle
    style.fill: "#0f3460"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  
  step1 -> step2: "on 'a'" {
    style.stroke: "#8b949e"
  }
  step2 -> step3: "on 'b'" {
    style.stroke: "#8b949e"
  }
  step2 -> step4: "on 'c'" {
    style.stroke: "#8b949e"
  }
}

dfa_section: "Resulting DFA" {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  
  D0: "{q0}" {
    shape: circle
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  D1: "{q1,q2}" {
    shape: circle
    style.fill: "#0f3460"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  D2: "{q3}" {
    shape: circle
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.double-border: true
  }
  
  D0 -> D1: "a" {
    style.stroke: "#8b949e"
  }
  D1 -> D2: "b" {
    style.stroke: "#8b949e"
  }
  D1 -> D2: "c" {
    style.stroke: "#8b949e"
  }
}

mapping_note: |md
  **Key Insight:**
  Each DFA state represents
  a set of NFA states that
  can be active simultaneously
| {
  shape: page
  style.fill: "#16213e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

nfa_section -> construction_process: "Apply Subset Construction" {
  style.stroke: "#3fb950"
  style.bold: true
}

construction_process -> dfa_section: "Deterministic Result" {
  style.stroke: "#3fb950"
  style.bold: true
}