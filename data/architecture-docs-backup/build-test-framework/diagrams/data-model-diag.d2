title: Data Model Relationships
direction: down

classes: {
  class_style: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  type_style: {
    style.fill: "#16213e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
    style.stroke-width: 2
  }
}

TestStatus: {
  shape: class
  class: class_style
  "- PENDING: TestStatus"
  "- RUNNING: TestStatus"
  "- PASSED: TestStatus"
  "- FAILED: TestStatus"
  "- ERROR: TestStatus"
  "- SKIPPED: TestStatus"
}

TestCase: {
  shape: class
  class: type_style
  "- id: string"
  "- name: string"
  "- description: string"
  "- fixture_deps: Fixture[]"
  "+ run(): TestResult"
}

TestSuite: {
  shape: class
  class: type_style
  "- id: string"
  "- name: string"
  "- test_cases: TestCase[]"
  "+ run_all(): TestResult[]"
}

TestResult: {
  shape: class
  class: type_style
  "- test_case_id: string"
  "- status: TestStatus"
  "- duration_ms: number"
  "- error_message: string"
  "- timestamp: DateTime"
}

Fixture: {
  shape: class
  class: type_style
  "- id: string"
  "- name: string"
  "- dependencies: Fixture[]"
  "+ setup(): void"
  "+ teardown(): void"
}

TestSuite -> TestCase: aggregates {
  style.stroke: "#3fb950"
  style.stroke-width: 2
  target-arrowhead.shape: diamond
  target-arrowhead.style.filled: false
}

TestCase -> TestResult: produces {
  style.stroke: "#3fb950"
  style.stroke-width: 2
}

TestCase -> Fixture: "depends on" {
  style.stroke: "#8b949e"
  style.stroke-dash: 3
}

Fixture -> Fixture: "depends on" {
  style.stroke: "#8b949e"
  style.stroke-dash: 3
}

TestResult -> TestStatus: "has status" {
  style.stroke: "#8b949e"
}