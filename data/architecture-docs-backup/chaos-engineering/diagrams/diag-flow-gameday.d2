title: Flowchart: GameDay Scenario Execution

classes: {
  start_end: {
    shape: oval
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  process: {
    shape: rectangle
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  decision: {
    shape: diamond
    style.fill: "#1a1a2e"
    style.stroke: "#f97316"
    style.font-color: "#e6edf3"
    style.stroke-width: 2
  }
  loop: {
    shape: hexagon
    style.fill: "#1a1a2e"
    style.stroke: "#8b5cf6"
    style.font-color: "#e6edf3"
  }
  report: {
    shape: page
    style.fill: "#1a1a2e"
    style.stroke: "#06b6d4"
    style.font-color: "#e6edf3"
  }
}

start: Start GameDay Scenario {
  class: start_end
}

load: Load Scenario Configuration {
  class: process
}

for_each_step: For Each Scenario Step {
  class: loop
}

brief: Brief Observers {
  class: process
}

execute: Execute Experiment {
  class: process
}

manual_approval: Manual Approval Required? {
  class: decision
}

wait_approval: Wait for Approval {
  class: process
}

check_health: Check System Health {
  class: process
}

proceed_check: System Healthy? {
  class: decision
}

abort: Abort Scenario {
  class: process
}

proceed: Proceed to Next Step {
  class: process
}

generate_report: Generate Final Report {
  class: report
}

end: End {
  class: start_end
}

# Flow connections
start -> load
load -> for_each_step

for_each_step -> brief
brief -> execute
execute -> manual_approval

manual_approval -> wait_approval: Yes
wait_approval -> check_health

manual_approval -> check_health: No

check_health -> proceed_check
proceed_check -> proceed: Yes
proceed -> for_each_step

proceed_check -> abort: No
abort -> generate_report

for_each_step -> generate_report: No More Steps

generate_report -> end