direction: down

classes: {
  token_base: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  ini_token: {
    style.fill: "#16213e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  toml_token: {
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  yaml_token: {
    style.fill: "#2d1b69"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
}

Token: Base Token {
  shape: class
  class: token_base
  - "type: TokenType"
  - "value: string"
  - "line: int"
  - "column: int"
  + "to_string(): string"
}

ini_container: INI Tokens {
  style.fill: "#16213e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  
  SectionToken: Section {
    shape: class
    class: ini_token
    - "name: string"
  }
  
  KeyToken: Key {
    shape: class
    class: ini_token
    - "key: string"
  }
  
  ValueToken: Value {
    shape: class
    class: ini_token
    - "raw_value: string"
  }
  
  CommentToken: Comment {
    shape: class
    class: ini_token
    - "text: string"
  }
}

toml_container: TOML Tokens {
  style.fill: "#0f3460"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  
  TableToken: Table {
    shape: class
    class: toml_token
    - "path: string"
    - "is_array: bool"
  }
  
  StringToken: String {
    shape: class
    class: toml_token
    - "content: string"
    - "is_multiline: bool"
    - "quote_type: QuoteType"
  }
  
  NumberToken: Number {
    shape: class
    class: toml_token
    - "value: string"
    - "number_type: NumberType"
  }
  
  BooleanToken: Boolean {
    shape: class
    class: toml_token
    - "value: bool"
  }
  
  DateTimeToken: DateTime {
    shape: class
    class: toml_token
    - "value: string"
    - "format: DateTimeFormat"
  }
}

yaml_container: YAML Tokens {
  style.fill: "#2d1b69"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  
  BlockToken: Block {
    shape: class
    class: yaml_token
    - "indent_level: int"
    - "is_sequence: bool"
  }
  
  ScalarToken: Scalar {
    shape: class
    class: yaml_token
    - "content: string"
    - "style: ScalarStyle"
  }
  
  FlowToken: Flow {
    shape: class
    class: yaml_token
    - "marker: char"
    - "flow_type: FlowType"
  }
  
  AnchorToken: Anchor {
    shape: class
    class: yaml_token
    - "name: string"
    - "is_reference: bool"
  }
}

Token -> SectionToken: inherits
Token -> KeyToken: inherits
Token -> ValueToken: inherits
Token -> CommentToken: inherits

Token -> TableToken: inherits
Token -> StringToken: inherits
Token -> NumberToken: inherits
Token -> BooleanToken: inherits
Token -> DateTimeToken: inherits

Token -> BlockToken: inherits
Token -> ScalarToken: inherits
Token -> FlowToken: inherits
Token -> AnchorToken: inherits