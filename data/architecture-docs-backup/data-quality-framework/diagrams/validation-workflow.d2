user: Data Engineer {
  class: actor
}

validation_engine: Validation Engine {
  class: system
}

expectation_executor: Expectation Executor {
  class: system
}

profiler: Data Profiler {
  class: system
}

anomaly_detector: Anomaly Detector {
  class: system
}

reporter: Result Reporter {
  class: system
}

user -> validation_engine: Submit dataset with expectations
validation_engine -> expectation_executor: Load expectation suite
expectation_executor -> validation_engine: Expectations ready

validation_engine -> profiler: Generate data profile
profiler -> profiler: Calculate statistics
profiler -> validation_engine: Profile complete

validation_engine -> expectation_executor: Execute expectations
expectation_executor -> expectation_executor: Run data quality tests
expectation_executor -> validation_engine: Validation results

validation_engine -> anomaly_detector: Run anomaly detection
anomaly_detector -> anomaly_detector: Statistical analysis
anomaly_detector -> validation_engine: Anomaly report

validation_engine -> reporter: Compile final results
reporter -> reporter: Generate quality report
reporter -> validation_engine: Report ready

validation_engine -> user: Return comprehensive quality assessment