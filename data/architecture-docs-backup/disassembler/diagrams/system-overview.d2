title: System Component Overview

classes: {
  component: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  data_flow: {
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  input_output: {
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
}

executable_file: Executable File\n(.exe, .elf, .bin) {
  shape: page
  class: input_output
}

binary_loader: Binary Loader {
  shape: rectangle
  class: component
}

prefix_decoder: Prefix Decoder {
  shape: rectangle
  class: component
}

opcode_decoder: Opcode Decoder {
  shape: rectangle
  class: component
}

operand_decoder: Operand Decoder {
  shape: rectangle
  class: component
}

output_formatter: Output Formatter {
  shape: rectangle
  class: component
}

assembly_output: Formatted Assembly\nInstructions {
  shape: page
  class: input_output
}

executable_file -> binary_loader: Raw bytes {
  class: data_flow
}

binary_loader -> prefix_decoder: Instruction bytes {
  class: data_flow
}

prefix_decoder -> opcode_decoder: Prefixes +\ninstruction bytes {
  class: data_flow
}

opcode_decoder -> operand_decoder: Operation +\noperand bytes {
  class: data_flow
}

operand_decoder -> output_formatter: Complete\ninstruction data {
  class: data_flow
}

output_formatter -> assembly_output: Assembly text {
  class: data_flow
}