title: System Error Recovery State Machine

classes: {
  state: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  init_state: {
    style.fill: "#3fb950"
    style.stroke: "#3fb950"
    style.font-color: "#ffffff"
    style.bold: true
  }
  final_state: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.double-border: true
    style.bold: true
  }
  error_state: {
    style.fill: "#d63031"
    style.stroke: "#e17055"
    style.font-color: "#ffffff"
    style.bold: true
  }
  degraded_state: {
    style.fill: "#fdcb6e"
    style.stroke: "#f39c12"
    style.font-color: "#2d3436"
    style.bold: true
  }
  recovery_state: {
    style.fill: "#74b9ff"
    style.stroke: "#0984e3"
    style.font-color: "#ffffff"
    style.bold: true
  }
}

init: {
  shape: circle
  class: init_state
  label: ""
}

healthy: Healthy Operation {
  shape: circle
  class: state
}

degraded: Degraded Mode {
  shape: circle
  class: degraded_state
}

detecting: Error Detection {
  shape: circle
  class: recovery_state
}

recovering: Recovery Process {
  shape: circle
  class: recovery_state
}

failed: System Failure {
  shape: circle
  class: error_state
}

shutdown: Graceful Shutdown {
  shape: circle
  class: final_state
}

init -> healthy: System Start

healthy -> detecting: Target Crash\nTimeout\nResource Exhaustion

healthy -> degraded: Performance Issues\nPartial Failure

degraded -> detecting: Failure Threshold\nExceeded

degraded -> healthy: Performance\nRestored

detecting -> recovering: Error Isolated\nRecovery Initiated

detecting -> failed: Critical Error\nUnrecoverable

recovering -> healthy: Recovery\nSuccessful

recovering -> degraded: Partial\nRecovery

recovering -> failed: Recovery\nFailed

failed -> recovering: Manual\nIntervention

failed -> shutdown: Admin\nShutdown

healthy -> shutdown: Normal\nShutdown

degraded -> shutdown: Emergency\nShutdown

recovery_note: |md
  **Recovery Actions:**
  • Target process restart
  • Memory cleanup
  • Corpus state validation
  • Resource monitoring reset
| {
  shape: page
  style.fill: "#16213e"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
  near: bottom-left
}

error_note: |md
  **Error Sources:**
  • Target program crashes
  • Memory exhaustion
  • Disk space depletion
  • Network timeouts
  • Corrupted test cases
| {
  shape: page
  style.fill: "#16213e"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
  near: top-right
}