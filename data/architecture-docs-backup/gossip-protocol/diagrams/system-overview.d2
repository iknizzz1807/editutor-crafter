title: System Component Overview

classes: {
  node_component: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  network_node: {
    style.fill: "#16213e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  connection: {
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
}

# Network Nodes
network: Gossip Network {
  style.fill: "#0f3460"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  
  node1: Node A {
    class: network_node
  }
  node2: Node B {
    class: network_node
  }
  node3: Node C {
    class: network_node
  }
  
  node1 <-> node2: gossip messages {
    class: connection
  }
  node2 <-> node3: gossip messages {
    class: connection
  }
  node1 <-> node3: gossip messages {
    class: connection
  }
}

# Main System Components
system: Gossip Node Architecture {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  
  gossip_node: GossipNode {
    class: node_component
    label: "GossipNode\n(Orchestrator)"
  }
  
  peer_mgr: PeerManager {
    class: node_component
    label: "PeerManager\n(Membership)"
  }
  
  msg_router: MessageRouter {
    class: node_component
    label: "MessageRouter\n(Dissemination)"
  }
  
  failure_detector: FailureDetector {
    class: node_component
    label: "FailureDetector\n(Monitoring)"
  }
  
  # Internal relationships
  gossip_node -> peer_mgr: manages peers {
    class: connection
  }
  gossip_node -> msg_router: routes messages {
    class: connection
  }
  gossip_node -> failure_detector: monitors health {
    class: connection
  }
  
  peer_mgr -> failure_detector: peer status {
    class: connection
  }
  msg_router -> peer_mgr: peer selection {
    class: connection
  }
  failure_detector -> peer_mgr: failure notifications {
    class: connection
  }
}

# Network connections
network.node1 -> system.gossip_node: network interface {
  class: connection
}
network.node2 -> system.msg_router: incoming messages {
  class: connection
}
system.msg_router -> network.node3: outgoing messages {
  class: connection
}