title: GraphQL Schema and Type Relationships {
  near: top-center
  style.font-size: 20
  style.bold: true
  style.font-color: "#e6edf3"
}

classes: {
  object_type: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  interface_type: {
    style.fill: "#16213e"
    style.stroke: "#58a6ff"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  input_type: {
    style.fill: "#0f3460"
    style.stroke: "#f85149"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  scalar_type: {
    style.fill: "#21262d"
    style.stroke: "#ffa657"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  enum_type: {
    style.fill: "#2d1b69"
    style.stroke: "#bc8cff"
    style.font-color: "#e6edf3"
    style.bold: true
  }
}

schema_types: Schema Types {
  style.fill: "#0d1117"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"

  user: User {
    shape: class
    class: object_type
    + "id: ID!"
    + "username: String!"
    + "email: String!"
    + "profile: UserProfile"
    + "posts: \"[Post!]!\""
  }

  post: Post {
    shape: class
    class: object_type
    + "id: ID!"
    + "title: String!"
    + "content: String!"
    + "author: User!"
    + "tags: \"[Tag!]!\""
    + "createdAt: DateTime!"
  }

  comment: Comment {
    shape: class
    class: object_type
    + "id: ID!"
    + "content: String!"
    + "author: User!"
    + "post: Post!"
    + "createdAt: DateTime!"
  }
}

interfaces: Interface Types {
  style.fill: "#0d1117"
  style.stroke: "#58a6ff"
  style.font-color: "#e6edf3"

  node: Node {
    shape: class
    class: interface_type
    + "id: ID!"
    + "createdAt: DateTime!"
    + "updatedAt: DateTime!"
  }

  timestamped: Timestamped {
    shape: class
    class: interface_type
    + "createdAt: DateTime!"
    + "updatedAt: DateTime!"
  }

  content: Content {
    shape: class
    class: interface_type
    + "title: String!"
    + "author: User!"
    + "createdAt: DateTime!"
  }
}

inputs: Input Types {
  style.fill: "#0d1117"
  style.stroke: "#f85149"
  style.font-color: "#e6edf3"

  create_user: CreateUserInput {
    shape: class
    class: input_type
    + "username: String!"
    + "email: String!"
    + "password: String!"
    + "profile: UserProfileInput"
  }

  create_post: CreatePostInput {
    shape: class
    class: input_type
    + "title: String!"
    + "content: String!"
    + "tagIds: \"[ID!]!\""
  }

  filter_input: PostFilterInput {
    shape: class
    class: input_type
    + "authorId: ID"
    + "tags: \"[String!]\""
    + "dateRange: DateRangeInput"
  }
}

scalars: Scalar Types {
  style.fill: "#0d1117"
  style.stroke: "#ffa657"
  style.font-color: "#e6edf3"

  datetime: DateTime {
    shape: class
    class: scalar_type
    + "Custom scalar for ISO 8601"
  }

  email: EmailAddress {
    shape: class
    class: scalar_type
    + "Validated email format"
  }

  json: JSON {
    shape: class
    class: scalar_type
    + "Arbitrary JSON object"
  }
}

enums: Enum Types {
  style.fill: "#0d1117"
  style.stroke: "#bc8cff"
  style.font-color: "#e6edf3"

  user_role: UserRole {
    shape: class
    class: enum_type
    + "ADMIN"
    + "MODERATOR"
    + "USER"
    + "GUEST"
  }

  post_status: PostStatus {
    shape: class
    class: enum_type
    + "DRAFT"
    + "PUBLISHED"
    + "ARCHIVED"
  }
}

interfaces.node -> schema_types.user: implements
interfaces.node -> schema_types.post: implements
interfaces.node -> schema_types.comment: implements
interfaces.timestamped -> schema_types.user: implements
interfaces.timestamped -> schema_types.post: implements
interfaces.content -> schema_types.post: implements

schema_types.user -> schema_types.post: "posts: \"[Post!]!\""
schema_types.post -> schema_types.user: "author: User!"
schema_types.comment -> schema_types.user: "author: User!"
schema_types.comment -> schema_types.post: "post: Post!"

inputs.create_user -> schema_types.user: creates
inputs.create_post -> schema_types.post: creates
inputs.filter_input -> schema_types.post: filters

scalars.datetime -> schema_types.user: createdAt
scalars.datetime -> schema_types.post: createdAt
scalars.email -> schema_types.user: email
scalars.json -> schema_types.user: metadata

enums.user_role -> schema_types.user: role
enums.post_status -> schema_types.post: status