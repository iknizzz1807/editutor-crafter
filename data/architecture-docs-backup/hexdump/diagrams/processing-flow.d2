title: Data Processing Pipeline Flow

classes: {
  input_style: {
    style.fill: "#16213e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  process_style: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  decision_style: {
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  output_style: {
    style.fill: "#16213e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
}

binary_file: Binary File Input {
  shape: cylinder
  class: input_style
}

file_reader: File Reader Component {
  class: process_style
  seek_offset: Apply Skip Offset
  chunk_buffer: 16-Byte Buffer
  
  seek_offset -> chunk_buffer
}

eof_check: End of File? {
  shape: diamond
  class: decision_style
}

hex_formatter: Hex Formatter {
  class: process_style
  address_col: Address Column
  hex_bytes: Hex Byte Conversion
  ascii_renderer: ASCII Renderer
  
  address_col -> hex_bytes
  hex_bytes -> ascii_renderer
}

output_buffer: Formatted Output {
  shape: page
  class: output_style
}

complete: Processing Complete {
  shape: circle
  class: output_style
  style.double-border: true
}

binary_file -> file_reader: Read 16 bytes
file_reader -> eof_check: Check remaining data
eof_check -> hex_formatter: No - Process chunk {
  style.stroke: "#3fb950"
}
eof_check -> complete: Yes - Finish {
  style.stroke: "#8b949e"
}
hex_formatter -> output_buffer: Formatted line
output_buffer -> file_reader: Continue pipeline {
  style.stroke: "#8b949e"
  style.stroke-dash: 3
}

pipeline_note: |md
  **Streaming Architecture:**
  - Constant 16-byte chunks
  - Memory-efficient processing
  - Supports files of any size
| {
  shape: page
  style.fill: "#0f3460"
  style.font-color: "#e6edf3"
  near: bottom-right
}