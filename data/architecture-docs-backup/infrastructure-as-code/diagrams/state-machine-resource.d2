direction: right

initial: {
  shape: circle
  style.fill: "#3fb950"
  style.stroke: "#3fb950"
  style.double-border: false
  style.font-color: "#e6edf3"
}

states: {
  Pending: {
    shape: oval
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  
  Creating: {
    shape: oval
    style.fill: "#0f3460"
    style.stroke: "#f0883e"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  
  Created: {
    shape: oval
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  
  Updating: {
    shape: oval
    style.fill: "#0f3460"
    style.stroke: "#f0883e"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  
  Deleting: {
    shape: oval
    style.fill: "#0f3460"
    style.stroke: "#f0883e"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  
  Error: {
    shape: oval
    style.fill: "#0f3460"
    style.stroke: "#f85149"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  
  Deleted: {
    shape: oval
    style.double-border: true
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
}

initial -> Pending: "parse config"

Pending -> Creating: "create started"

Creating -> Created: "create succeeded"
Creating -> Error: "create failed"

Created -> Updating: "update started"
Created -> Deleting: "delete started"

Updating -> Created: "update succeeded"
Updating -> Error: "update failed"

Deleting -> Deleted: "delete succeeded"
Deleting -> Error: "delete failed"

Error -> Deleting: "destroy from error" {
  style.stroke-dash: 3
  style.stroke: "#8b949e"
}