direction: right

title: System Component Architecture {
  near: top-center
  style.font-size: 20
  style.bold: true
  style.font-color: "#e6edf3"
}

classes: {
  container: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.stroke-width: 2
  }
  
  component: {
    style.fill: "#16213e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  
  interface: {
    style.fill: "#0f3460"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
    style.stroke-dash: 3
  }
  
  data_flow: {
    style.stroke: "#3fb950"
    style.stroke-width: 2
    style.font-color: "#e6edf3"
  }
  
  shared_connection: {
    style.stroke: "#ffa502"
    style.stroke-width: 2
    style.font-color: "#ffa502"
  }
}

# Core Components
data_handler: DataHandler {
  class: component
  shape: rectangle
}

simple_lr: SimpleLinearRegression {
  class: component
  shape: rectangle
}

gradient_optimizer: GradientDescentOptimizer {
  class: component
  shape: rectangle
}

multiple_lr: MultipleLinearRegression {
  class: component
  shape: rectangle
}

# Shared Interfaces
prediction_interface: IPredictionModel {
  class: interface
  shape: rectangle
}

optimization_interface: IOptimizer {
  class: interface
  shape: rectangle
}

data_interface: IDataProcessor {
  class: interface
  shape: rectangle
}

# Data Flow Connections
data_handler -> simple_lr: "Training Data" {
  class: data_flow
}

data_handler -> multiple_lr: "Feature Matrix" {
  class: data_flow
}

gradient_optimizer -> simple_lr: "Parameter Updates" {
  class: data_flow
}

gradient_optimizer -> multiple_lr: "Weight Updates" {
  class: data_flow
}

simple_lr -> gradient_optimizer: "Loss Gradients" {
  class: data_flow
}

multiple_lr -> gradient_optimizer: "Cost Gradients" {
  class: data_flow
}

# Interface Relationships
data_handler -> data_interface: implements {
  class: shared_connection
}

simple_lr -> prediction_interface: implements {
  class: shared_connection
}

multiple_lr -> prediction_interface: implements {
  class: shared_connection
}

gradient_optimizer -> optimization_interface: implements {
  class: shared_connection
}

# Cross-component relationships
simple_lr <-> multiple_lr: "Shared Learning Principles" {
  class: shared_connection
  style.stroke-dash: 5
}