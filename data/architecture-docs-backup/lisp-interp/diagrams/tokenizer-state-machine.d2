direction: right

classes: {
  state_style: {
    shape: circle
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  final_state: {
    shape: circle
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
    style.double-border: true
  }
  start_state: {
    shape: circle
    style.fill: "#3fb950"
    style.stroke: "#3fb950"
    label: ""
  }
}

init: {
  class: start_state
}

normal: Normal Text {
  class: state_style
}

string: Inside String {
  class: state_style
}

comment: Inside Comment {
  class: state_style
}

escape_string: String Escape {
  class: state_style
}

end: {
  class: final_state
  label: "End"
}

init -> normal: Start

normal -> string: quote
normal -> comment: semicolon
normal -> normal: whitespace, symbols, numbers
normal -> end: EOF

string -> normal: closing quote
string -> escape_string: backslash
string -> string: any character

escape_string -> string: any character

comment -> normal: newline
comment -> comment: any character
comment -> end: EOF

title: Tokenizer State Machine {
  near: top-center
  shape: text
  style.font-color: "#e6edf3"
  style.bold: true
  style.font-size: 20
}