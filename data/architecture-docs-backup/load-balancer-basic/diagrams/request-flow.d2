shape: sequence_diagram

client: Client {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

load_balancer: Load Balancer {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

proxy: Reverse Proxy {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

algorithm: Algorithm Selector {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

health_checker: Health Checker {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

backend1: Backend Server 1 {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

backend2: Backend Server 2 {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

client -> load_balancer: HTTP Request
load_balancer -> health_checker: Check server health
health_checker -> backend1: Health ping
backend1 -> health_checker: OK
health_checker -> backend2: Health ping
backend2 -> health_checker: OK
health_checker -> load_balancer: Healthy servers list
load_balancer -> algorithm: Select next server
algorithm -> load_balancer: Return Backend Server 1
load_balancer -> proxy: Forward to Backend 1
proxy -> backend1: HTTP Request
backend1 -> backend1: Process request
backend1 -> proxy: HTTP Response
proxy -> load_balancer: Response data
load_balancer -> client: HTTP Response