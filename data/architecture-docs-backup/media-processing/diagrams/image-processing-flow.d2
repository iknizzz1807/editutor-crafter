title: Image Processing Workflow

classes: {
  process: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  decision: {
    style.fill: "#16213e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  storage: {
    style.fill: "#0f3460"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
}

start: Start {
  shape: circle
  style.fill: "#3fb950"
  style.font-color: "#ffffff"
}

load: Load Image {
  class: process
}

extract_exif: Extract EXIF Data {
  class: process
}

check_format: Format Supported? {
  shape: diamond
  class: decision
}

resize_crop: Resize/Crop {
  class: process
}

quality_check: Quality Settings? {
  shape: diamond
  class: decision
}

convert_format: Format Conversion {
  class: process
}

optimize_high: High Quality Optimization {
  class: process
}

optimize_standard: Standard Optimization {
  class: process
}

save_image: Save Image {
  class: storage
}

error_handler: Format Error {
  class: storage
  style.fill: "#d63031"
  style.stroke: "#e17055"
}

end: Complete {
  shape: circle
  style.fill: "#3fb950"
  style.font-color: "#ffffff"
  style.double-border: true
}

start -> load
load -> extract_exif
extract_exif -> check_format
check_format -> resize_crop: Yes
check_format -> error_handler: No
resize_crop -> quality_check
quality_check -> optimize_high: High
quality_check -> optimize_standard: Standard
optimize_high -> convert_format
optimize_standard -> convert_format
convert_format -> save_image
save_image -> end
error_handler -> end