Fork/Exec Interaction Sequence: {
  shape: sequence_diagram
  
  parent: Parent Process {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  
  kernel: Kernel {
    style.fill: "#16213e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  
  child: Child Process {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  
  program: New Program {
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  
  parent -> kernel: fork() system call
  kernel -> kernel: Create process copy
  kernel -> parent: Return child PID
  kernel -> child: Return 0
  child -> child: Check return value
  child -> kernel: exec() system call
  kernel -> program: Load new executable
  program -> kernel: Program starts
  kernel -> child: New process image
  child -> child: Execute new program
  parent -> parent: Continue execution
  parent -> kernel: wait() for child
  child -> child: Program completes
  child -> kernel: exit() system call
  kernel -> parent: Child status returned
  parent -> parent: Resume execution
}

classes: {
  system_call: {
    style.stroke: "#e17055"
    style.bold: true
  }
  process_state: {
    style.fill: "#2d3748"
    style.stroke: "#4a5568"
  }
}


