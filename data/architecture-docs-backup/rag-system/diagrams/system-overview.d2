title: RAG System Component Overview

classes: {
  component: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  external: {
    style.fill: "#0f3460"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  data_flow: {
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
}

# Core RAG Components
document_loader: Document Loader {
  class: component
}

chunker: Chunker {
  class: component
}

embedding_generator: Embedding Generator {
  class: component
}

vector_store: Vector Store {
  class: component
}

llm_integration: LLM Integration {
  class: component
}

# External Dependencies
vector_db: Vector Database {
  shape: cylinder
  class: external
}

llm_api: LLM API {
  shape: cloud
  class: external
}

embedding_api: Embedding API {
  shape: cloud
  class: external
}

# Document Sources
documents: Documents {
  shape: page
  class: external
}

# User Interface
user: User Query {
  shape: oval
  class: external
}

response: Generated Response {
  shape: page
  class: component
}

# Core Processing Flow
documents -> document_loader: ingest {
  class: data_flow
}

document_loader -> chunker: raw text {
  class: data_flow
}

chunker -> embedding_generator: text chunks {
  class: data_flow
}

embedding_generator -> vector_store: embeddings {
  class: data_flow
}

vector_store -> vector_db: store vectors {
  class: data_flow
}

# Query Flow
user -> llm_integration: query {
  class: data_flow
}

llm_integration -> vector_store: retrieve context {
  class: data_flow
}

vector_store -> vector_db: vector search {
  class: data_flow
}

vector_db -> vector_store: relevant chunks {
  class: data_flow
}

vector_store -> llm_integration: context + query {
  class: data_flow
}

llm_integration -> response: generated answer {
  class: data_flow
}

# External API Dependencies
embedding_generator -> embedding_api: embed text {
  class: data_flow
}

llm_integration -> llm_api: generate response {
  class: data_flow
}