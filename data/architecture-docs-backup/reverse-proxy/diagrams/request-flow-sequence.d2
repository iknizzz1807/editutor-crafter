shape: sequence_diagram

client: Client {
  style.fill: "#1a1a2e"
  style.font-color: "#e6edf3"
  style.stroke: "#3fb950"
}

ssl_terminator: SSL Terminator {
  style.fill: "#1a1a2e"
  style.font-color: "#e6edf3"
  style.stroke: "#3fb950"
}

http_parser: HTTP Parser {
  style.fill: "#1a1a2e"
  style.font-color: "#e6edf3"
  style.stroke: "#3fb950"
}

load_balancer: Load Balancer {
  style.fill: "#1a1a2e"
  style.font-color: "#e6edf3"
  style.stroke: "#3fb950"
}

cache: Cache Manager {
  style.fill: "#1a1a2e"
  style.font-color: "#e6edf3"
  style.stroke: "#3fb950"
}

backend: Backend Server {
  style.fill: "#1a1a2e"
  style.font-color: "#e6edf3"
  style.stroke: "#3fb950"
}

client -> ssl_terminator: HTTPS Request
ssl_terminator -> http_parser: Decrypted HTTP Request
http_parser -> cache: Parsed Request
cache -> http_parser: Cache Miss
http_parser -> load_balancer: Forward Request
load_balancer -> backend: Route to Selected Backend
backend -> load_balancer: HTTP Response
load_balancer -> cache: Cache Response
cache -> http_parser: Store in Cache
http_parser -> ssl_terminator: Formatted Response
ssl_terminator -> client: HTTPS Response