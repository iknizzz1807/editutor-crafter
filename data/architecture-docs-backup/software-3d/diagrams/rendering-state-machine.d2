direction: right

classes: {
  state: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  initial: {
    style.fill: "#3fb950"
    style.stroke: "#3fb950"
    style.font-color: "#ffffff"
  }
  final: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.double-border: true
  }
  transition: {
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
}

init: {
  shape: circle
  class: initial
  label: ""
}

vertex_transform: Vertex Transform {
  shape: circle
  class: state
}

clipping: Clipping {
  shape: circle
  class: state
}

backface_cull: Backface Culling {
  shape: circle
  class: state
}

projection: Projection {
  shape: circle
  class: state
}

viewport: Viewport Transform {
  shape: circle
  class: state
}

setup: Triangle Setup {
  shape: circle
  class: state
}

rasterize: Rasterization {
  shape: circle
  class: state
}

depth_test: Depth Testing {
  shape: circle
  class: state
}

shading: Fragment Shading {
  shape: circle
  class: state
}

rendered: Rendered {
  shape: circle
  class: final
}

discarded: Discarded {
  shape: circle
  class: final
}

init -> vertex_transform: Triangle Input {
  class: transition
}

vertex_transform -> clipping: World to View Space {
  class: transition
}

clipping -> backface_cull: Inside View Volume {
  class: transition
}

clipping -> discarded: Outside Volume {
  class: transition
}

backface_cull -> projection: Front Facing {
  class: transition
}

backface_cull -> discarded: Back Facing {
  class: transition
}

projection -> viewport: To NDC {
  class: transition
}

viewport -> setup: To Screen Space {
  class: transition
}

setup -> rasterize: Edge Equations {
  class: transition
}

rasterize -> depth_test: Per Fragment {
  class: transition
}

depth_test -> shading: Depth Pass {
  class: transition
}

depth_test -> discarded: Depth Fail {
  class: transition
}

shading -> rendered: Pixel Output {
  class: transition
}