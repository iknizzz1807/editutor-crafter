classes: {
  base_node: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  statement_node: {
    style.fill: "#16213e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  expression_node: {
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  inheritance: {
    style.stroke: "#8b949e"
    style.stroke-dash: 3
  }
}

Node: {
  shape: class
  class: base_node
  - "position: Position"
  - "node_type: NodeType"
  + "accept(visitor: Visitor): void"
  + "get_children(): Node[]"
}

Statement: {
  shape: class
  class: statement_node
  + "execute(): Result"
}

Expression: {
  shape: class
  class: expression_node
  - "data_type: DataType"
  + "evaluate(): Value"
}

SelectStatement: {
  shape: class
  class: statement_node
  - "select_list: SelectItem[]"
  - "from_clause: FromClause"
  - "where_clause: WhereClause?"
  - "order_by: OrderBy?"
  - "limit_clause: Limit?"
}

InsertStatement: {
  shape: class
  class: statement_node
  - "table_name: Identifier"
  - "columns: Identifier[]"
  - "values: ValuesList[]"
}

UpdateStatement: {
  shape: class
  class: statement_node
  - "table_name: Identifier"
  - "assignments: Assignment[]"
  - "where_clause: WhereClause?"
}

BinaryExpression: {
  shape: class
  class: expression_node
  - "left_expr: Expression"
  - "operator: BinaryOperator"
  - "right_expr: Expression"
}

UnaryExpression: {
  shape: class
  class: expression_node
  - "operator: UnaryOperator"
  - "operand: Expression"
}

Identifier: {
  shape: class
  class: expression_node
  - "name: string"
  - "qualifier: string?"
}

Literal: {
  shape: class
  class: expression_node
  - "value: LiteralValue"
  - "literal_type: LiteralType"
}

FunctionCall: {
  shape: class
  class: expression_node
  - "function_name: string"
  - "arguments: Expression[]"
  - "distinct: bool"
}

Node -> Statement: {
  class: inheritance
  label: inherits
}

Node -> Expression: {
  class: inheritance
  label: inherits
}

Statement -> SelectStatement: {
  class: inheritance
  label: inherits
}

Statement -> InsertStatement: {
  class: inheritance
  label: inherits
}

Statement -> UpdateStatement: {
  class: inheritance
  label: inherits
}

Expression -> BinaryExpression: {
  class: inheritance
  label: inherits
}

Expression -> UnaryExpression: {
  class: inheritance
  label: inherits
}

Expression -> Identifier: {
  class: inheritance
  label: inherits
}

Expression -> Literal: {
  class: inheritance
  label: inherits
}

Expression -> FunctionCall: {
  class: inheritance
  label: inherits
}