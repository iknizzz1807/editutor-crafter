classes: {
  state: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  initial: {
    style.fill: "#3fb950"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  transition: {
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
}

title: Object Pool Lifecycle {
  near: top-center
  style.font-size: 18
  style.font-color: "#e6edf3"
  style.bold: true
}

init: {
  shape: circle
  class: initial
  label: ""
}

available: Available {
  shape: circle
  class: state
}

active: Active {
  shape: circle
  class: state
}

collided: Collided {
  shape: circle
  class: state
}

out_of_bounds: Out of Bounds {
  shape: circle
  class: state
}

reset: Reset {
  shape: circle
  class: state
}

init -> available: Pool Initialize {
  class: transition
}

available -> active: Spawn Projectile {
  class: transition
}

active -> collided: Hit Target {
  class: transition
}

active -> out_of_bounds: Exit Screen {
  class: transition
}

collided -> reset: Cleanup {
  class: transition
}

out_of_bounds -> reset: Cleanup {
  class: transition
}

reset -> available: Return to Pool {
  class: transition
}

pool_note: |md
  **Object Pool Pattern**
  
  Reuses projectile objects to avoid
  garbage collection during gameplay
| {
  shape: page
  near: bottom-left
  style.fill: "#16213e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}