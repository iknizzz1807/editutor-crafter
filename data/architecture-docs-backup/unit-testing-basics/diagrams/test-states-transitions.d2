direction: right

classes: {
  state: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.stroke-width: 2
  }
  initial: {
    style.fill: "#3fb950"
    style.stroke: "#3fb950"
    style.font-color: "#1a1a2e"
  }
  final: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.double-border: true
  }
  transition: {
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
}

init: {
  shape: circle
  class: initial
  label: ""
}

discovered: {
  shape: circle
  class: state
  label: "Discovered"
}

setup: {
  shape: circle
  class: state
  label: "Setup"
}

running: {
  shape: circle
  class: state
  label: "Running"
}

passed: {
  shape: circle
  class: final
  label: "Passed"
}

failed: {
  shape: circle
  class: final
  label: "Failed"
}

torn_down: {
  shape: circle
  class: final
  label: "Torn Down"
}

init -> discovered: {
  class: transition
  label: "test found"
}

discovered -> setup: {
  class: transition
  label: "begin execution"
}

setup -> running: {
  class: transition
  label: "setup complete"
}

setup -> failed: {
  class: transition
  label: "setup error"
}

running -> passed: {
  class: transition
  label: "assertions pass"
}

running -> failed: {
  class: transition
  label: "assertion fails / exception"
}

passed -> torn_down: {
  class: transition
  label: "cleanup resources"
}

failed -> torn_down: {
  class: transition
  label: "cleanup resources"
}