classes: {
  test_class: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  fixture_class: {
    style.fill: "#16213e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  setup_class: {
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
}

test_suite: Test Suite {
  class: test_class
  
  test_module_auth: Authentication Tests {
    shape: class
    class: test_class
    - "suite_name: string"
    - "test_classes: List<TestClass>"
    + "setup_suite(): void"
    + "teardown_suite(): void"
    + "run_all_tests(): TestResults"
  }
  
  test_module_user: User Management Tests {
    shape: class
    class: test_class
    - "suite_name: string"
    - "test_classes: List<TestClass>"
    + "setup_suite(): void"
    + "teardown_suite(): void"
    + "run_all_tests(): TestResults"
  }
}

test_classes: Test Classes {
  class: test_class
  
  login_test_class: LoginTestClass {
    shape: class
    class: test_class
    - "class_name: string"
    - "test_methods: List<TestMethod>"
    - "fixtures: List<Fixture>"
    + "setup_class(): void"
    + "teardown_class(): void"
    + "run_tests(): void"
  }
  
  user_crud_test_class: UserCRUDTestClass {
    shape: class
    class: test_class
    - "class_name: string"
    - "test_methods: List<TestMethod>"
    - "fixtures: List<Fixture>"
    + "setup_class(): void"
    + "teardown_class(): void"
    + "run_tests(): void"
  }
}

test_functions: Test Functions {
  class: test_class
  
  test_valid_login: TestValidLogin {
    shape: class
    class: test_class
    - "test_name: string"
    - "assertions: List<Assertion>"
    - "setup_data: TestData"
    + "arrange(): void"
    + "act(): Result"
    + "assert(): void"
  }
  
  test_invalid_credentials: TestInvalidCredentials {
    shape: class
    class: test_class
    - "test_name: string"
    - "assertions: List<Assertion>"
    - "setup_data: TestData"
    + "arrange(): void"
    + "act(): Result"
    + "assert(): void"
  }
  
  test_create_user: TestCreateUser {
    shape: class
    class: test_class
    - "test_name: string"
    - "assertions: List<Assertion>"
    - "setup_data: TestData"
    + "arrange(): void"
    + "act(): Result"
    + "assert(): void"
  }
}

fixtures: Fixtures & Test Data {
  class: fixture_class
  
  database_fixture: DatabaseFixture {
    shape: class
    class: fixture_class
    - "connection: DatabaseConnection"
    - "test_data: TestDataSet"
    - "scope: FixtureScope"
    + "setup(): void"
    + "teardown(): void"
    + "get_test_data(): TestData"
  }
  
  user_fixture: UserFixture {
    shape: class
    class: fixture_class
    - "test_users: List<User>"
    - "mock_auth_service: AuthService"
    - "scope: FixtureScope"
    + "create_test_user(): User"
    + "cleanup_users(): void"
  }
}

setup_teardown: Setup & Teardown Methods {
  class: setup_class
  
  setup_methods: Setup Methods {
    shape: class
    class: setup_class
    + "setup_suite(): void"
    + "setup_class(): void"
    + "setup_method(): void"
    + "setup_function(): void"
  }
  
  teardown_methods: Teardown Methods {
    shape: class
    class: setup_class
    + "teardown_suite(): void"
    + "teardown_class(): void"
    + "teardown_method(): void"
    + "teardown_function(): void"
  }
}

test_suite -> test_classes: contains
test_classes -> test_functions: contains
test_classes -> fixtures: uses
test_functions -> fixtures: uses
test_functions -> setup_teardown: lifecycle
setup_teardown -> fixtures: manages

test_suite.test_module_auth -> test_classes.login_test_class: contains
test_suite.test_module_user -> test_classes.user_crud_test_class: contains

test_classes.login_test_class -> test_functions.test_valid_login: contains
test_classes.login_test_class -> test_functions.test_invalid_credentials: contains
test_classes.user_crud_test_class -> test_functions.test_create_user: contains

fixtures.database_fixture -> test_functions: provides data
fixtures.user_fixture -> test_functions: provides users

execution_flow: |md
  ## Test Execution Flow
  1. **Suite Setup** - Initialize test environment
  2. **Class Setup** - Prepare test class resources
  3. **Method Setup** - Configure individual test
  4. **Test Execution** - Run arrange/act/assert
  5. **Method Teardown** - Clean up test resources
  6. **Class Teardown** - Release class resources
  7. **Suite Teardown** - Final cleanup
| {
  shape: page
  near: bottom-center
  style.fill: "#0f3460"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}