scenario: Scenario: 4 frames, need to evict for Page F {
  class: metadata
  shape: page
}

fifo: FIFO Algorithm {
  class: algorithm
  
  queue: Queue Order {
    class: metadata
    shape: rectangle
    
    order: "A → B → C → D\n(oldest)  (newest)"
  }
  
  frames: Physical Frames {
    frame_a: "Frame 1\nPage A" {
      class: victim
    }
    frame_b: "Frame 2\nPage B" {
      class: frame
    }
    frame_c: "Frame 3\nPage C" {
      class: frame
    }
    frame_d: "Frame 4\nPage D" {
      class: frame
    }
  }
  
  decision: "Victim: Page A\n(First In)" {
    class: victim
  }
  
  queue -> frames: tracks order
  frames -> decision: evict oldest
}

lru: LRU Algorithm {
  class: algorithm
  
  access: Access Times {
    class: metadata
    shape: rectangle
    
    times: "A: t=100 (oldest)\nB: t=150\nC: t=200\nD: t=250 (newest)"
  }
  
  frames: Physical Frames {
    frame_a: "Frame 1\nPage A" {
      class: victim
    }
    frame_b: "Frame 2\nPage B" {
      class: frame
    }
    frame_c: "Frame 3\nPage C" {
      class: frame
    }
    frame_d: "Frame 4\nPage D" {
      class: frame
    }
  }
  
  decision: "Victim: Page A\n(Least Recently Used)" {
    class: victim
  }
  
  access -> frames: tracks usage
  frames -> decision: evict LRU
}

clock: Clock Algorithm {
  class: algorithm
  
  pointer: Clock Hand Position {
    class: metadata
    shape: circle
    
    pos: "→ Frame 1"
  }
  
  frames: Physical Frames {
    frame_a: "Frame 1\nPage A\nRef: 0" {
      class: victim
    }
    frame_b: "Frame 2\nPage B\nRef: 1" {
      class: frame
    }
    frame_c: "Frame 3\nPage C\nRef: 1" {
      class: frame
    }
    frame_d: "Frame 4\nPage D\nRef: 0" {
      class: frame
    }
  }
  
  decision: "Victim: Page A\n(First with ref=0)" {
    class: victim
  }
  
  pointer -> frames: scans for ref=0
  frames -> decision: evict first match
}

comparison: Key Differences {
  class: metadata
  shape: page
  
  diff: |md
    **FIFO**: Simple queue, ignores usage patterns
    **LRU**: Tracks access times, best locality
    **Clock**: Approximates LRU with ref bits
  |
}

