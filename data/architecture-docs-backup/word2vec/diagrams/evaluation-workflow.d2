title: Evaluation and Visualization Workflow

classes: {
  input_style: {
    style.fill: "#16213e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  
  process_style: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  
  output_style: {
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
}

trained_embeddings: Trained Word Embeddings {
  shape: cylinder
  class: input_style
}

evaluation: Evaluation Pipeline {
  class: process_style
  
  similarity: Similarity Search {
    class: process_style
  }
  
  analogy: Analogy Testing {
    class: process_style
  }
  
  visualization: t-SNE Visualization {
    class: process_style
  }
}

results: Results & Analysis {
  class: process_style
  
  similarity_results: Word Similarities {
    shape: page
    class: output_style
  }
  
  analogy_results: Analogy Scores {
    shape: page
    class: output_style
  }
  
  visual_plot: 2D Embedding Plot {
    shape: page
    class: output_style
  }
}

trained_embeddings -> evaluation.similarity: vector lookup
trained_embeddings -> evaluation.analogy: semantic relationships
trained_embeddings -> evaluation.visualization: dimensionality reduction

evaluation.similarity -> results.similarity_results: nearest neighbors
evaluation.analogy -> results.analogy_results: accuracy metrics  
evaluation.visualization -> results.visual_plot: scatter plot

results.similarity_results -> quality_assessment: semantic validation
results.analogy_results -> quality_assessment: relationship validation
results.visual_plot -> quality_assessment: cluster inspection

quality_assessment: Quality Assessment {
  shape: diamond
  class: input_style
}

quality_assessment -> model_ready: Pass
quality_assessment -> retrain: Fail

model_ready: Model Ready {
  shape: circle
  class: output_style
  style.double-border: true
}

retrain: Retrain Model {
  shape: rectangle
  class: process_style
}