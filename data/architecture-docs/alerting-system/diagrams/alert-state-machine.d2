init: {
  shape: circle
  style.fill: "#3fb950"
  label: ""
  class: state_node
}

inactive: Inactive {
  class: state_node
}
pending: Pending {
  class: state_node
}
firing: Firing {
  class: state_node
}
resolved: Resolved {
  shape: circle
  style.double-border: true
  class: state_node
}

init -> inactive: Start
inactive -> pending: "condition met"
pending -> firing: "for_duration elapsed"
pending -> inactive: "condition not met"
pending -> inactive: "for_duration reset" {
  source-arrowhead.label: ""
  style.stroke-dash: 3
}
firing -> resolved: "condition not met"

classes: {
  state_node: {
    shape: circle
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
}