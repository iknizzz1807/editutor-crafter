  # Primary pipeline flow
  cli -> parser: "entry points"
  parser -> resolver: "parsed imports"
  resolver -> graph: "resolved modules"
  graph -> transformer: "dependency graph"
  transformer -> generator: "optimized AST"

  # Feedback loop for graph resolution
  graph -> resolver: "new dependencies" {
    style.stroke-dash: 3
    style.animated: true
  }
}

# External interfaces
User -> cli: "commands & config"
generator -> Output: "bundled code"
