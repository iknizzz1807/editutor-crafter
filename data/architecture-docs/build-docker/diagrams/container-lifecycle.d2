# Container Lifecycle State Machine

# Initial state indicator
start_marker: "" {
  shape: circle
  style.fill: "#3fb950"
  width: 20
  height: 20
}
start_marker -> Created

# States
Created: Created {
  shape: circle
  style: {
    stroke-width: 2
  }
}
Running: Running {
  shape: circle
  style: {
    stroke-width: 2
  }
}
Paused: Paused {
  shape: circle
  style: {
    stroke-width: 2
  }
}
Stopped: Stopped {
  shape: circle
  style: {
    stroke-width: 2
  }
}
Removed: Removed {
  shape: circle
  style: {
    stroke-width: 2
    double-border: true
  }
}

# Transitions with events
Created -> Running: start
Running -> Paused: pause
Paused -> Running: resume
Running -> Stopped: stop
Paused -> Stopped: stop
Stopped -> Running: start
Stopped -> Removed: remove

# Error transitions (not all events valid from all states)
Stopped -> Stopped: stop (no-op) {
  style.stroke-dash: 2
}
Created -> Created: start (no-op) {
  style.stroke-dash: 2
}

# Title
title: Container Lifecycle State Machine
