direction: down

title: Git Object Model {
  style.font-size: 24
  style.font-color: "#e6edf3"
}

# Commit Object
commit_abc123: "commit abc123" {
  shape: class
  author: "John Doe"
  message: "Initial commit"
  tree: "tree def456"
  parent: "commit 789xyz"
  
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.stroke-width: 2
  style.font-color: "#e6edf3"
  style.bold: true
}

# Tree Object (root)
tree_def456: "tree def456" {
  shape: class
  blob_README: "100644 README.md ghi789"
  blob_main: "100644 main.py jkl012"
  tree_src: "040000 src/ mno345"
  
  style.fill: "#16213e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

# Blob Objects
blob_readme: "blob ghi789" {
  shape: class
  content: "# My Project\\nThis is a demo..."
  
  style.fill: "#0f3460"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

blob_main: "blob jkl012" {
  shape: class
  content: "#!/usr/bin/env python3\\nprint('Hello World')"
  
  style.fill: "#0f3460"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

# Sub-tree Object
tree_src: "tree mno345" {
  shape: class
  blob_utils: "100644 utils.py pqr678"
  blob_config: "100644 config.py stu901"
  
  style.fill: "#16213e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

# Blobs in src directory
blob_utils: "blob pqr678" {
  shape: class
  content: "def helper_function():\\n    pass"
  
  style.fill: "#0f3460"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

blob_config: "blob stu901" {
  shape: class
  content: "DEBUG = True\\nPORT = 8000"
  
  style.fill: "#0f3460"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

# Relationships
commit_abc123 -> tree_def456: "points to" {
  style.stroke: "#3fb950"
  style.stroke-width: 2
}

tree_def456 -> blob_readme: "references" {
  style.stroke: "#8b949e"
}

tree_def456 -> blob_main: "references" {
  style.stroke: "#8b949e"
}

tree_def456 -> tree_src: "references" {
  style.stroke: "#8b949e"
}

tree_src -> blob_utils: "references" {
  style.stroke: "#8b949e"
}

tree_src -> blob_config: "references" {
  style.stroke: "#8b949e"
}

# Legend
legend: Object Types {
  commit_type: "Commit: Snapshot metadata + tree pointer" {
    shape: page
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  
  tree_type: "Tree: Directory structure + object refs" {
    shape: page
    style.fill: "#16213e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  
  blob_type: "Blob: Raw file content" {
    shape: page
    style.fill: "#0f3460"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  
  style.fill: "#16213e"
  style.stroke: "#3fb950"
}