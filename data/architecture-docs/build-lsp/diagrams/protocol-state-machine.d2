direction: right

# States
uninitialized: Uninitialized {
  shape: circle
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  style.bold: true
}

initializing: Initializing {
  shape: circle
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

initialized: Initialized {
  shape: circle
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

shutdown: Shutdown {
  shape: circle
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

exit: Exit {
  shape: circle
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  style.stroke-width: 3
}

# Initial state marker
start: "" {
  shape: circle
  style.fill: "#3fb950"
  width: 20
  height: 20
}

# Transitions
start -> uninitialized: ""

uninitialized -> initializing: "initialize request" {
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

initializing -> initialized: "initialized notification" {
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

initialized -> shutdown: "shutdown request" {
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

shutdown -> exit: "exit notification" {
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

# Error transitions
initializing -> exit: "invalid state transition" {
  style.stroke: "#d63031"
  style.font-color: "#d63031"
  style.stroke-dash: 5
}

uninitialized -> exit: "exit notification" {
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}