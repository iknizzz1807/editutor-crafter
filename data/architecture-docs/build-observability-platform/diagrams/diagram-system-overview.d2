platform: Observability Platform {
  class: dark_container
  
  ingestion: Ingestion Pipeline {
    class: dark_component
    shape: rectangle
  }
  
  storage: Storage Engines {
    class: dark_component
    shape: rectangle
    logs: "Log Store"
    metrics: "Metric Store"
    traces: "Trace Store"
  }
  
  query: Query Engine {
    class: dark_component
    shape: rectangle
  }
  
  alerting: Alerting Engine {
    class: dark_component
    shape: rectangle
  }
  
  api1: "Internal API" {
    class: dark_interface
    shape: circle
  }
  
  api2: "Internal API" {
    class: dark_interface
    shape: circle
  }
  
  api3: "Internal API" {
    class: dark_interface
    shape: circle
  }
  
  api4: "Internal API" {
    class: dark_interface
    shape: circle
  }
  
  api5: "Internal API" {
    class: dark_interface
    shape: circle
  }
  
  Telemetry Data (External) -> ingestion: "telemetry in\n(logs, metrics, traces)"
  ingestion -> api1
  api1 -> storage
  storage -> api2
  api2 -> query
  storage -> api3
  api3 -> alerting
  query -> api4
  api4 -> storage: "query data"
  alerting -> api5
  api5 -> storage: "fetch data for alerts"
  query -> Query Results (External): "queries out"
  alerting -> Alerts (External): "alerts out"
}

