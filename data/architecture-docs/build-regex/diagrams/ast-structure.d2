direction: down

title: Abstract Syntax Tree Node Types {
  style.font-size: 20
  style.bold: true
  style.fill: "#1a1a2e"
  style.font-color: "#e6edf3"
}

ASTNode: {
  shape: class
  +type: NodeType
  +position: Position
  +accept(visitor): void
  +clone(): ASTNode*
  +free(): void
  
  style.fill: "#16213e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
  style.bold: true
}

LiteralNode: {
  shape: class
  +character: char
  +is_escaped: bool
  +matches(char): bool
  
  style.fill: "#0f3460"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

ConcatenationNode: {
  shape: class
  +left: ASTNode*
  +right: ASTNode*
  +add_child(node): void
  
  style.fill: "#0f3460"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

AlternationNode: {
  shape: class
  +alternatives: ASTNode**
  +count: size_t
  +add_alternative(node): void
  
  style.fill: "#0f3460"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

QuantifierNode: {
  shape: class
  +child: ASTNode*
  +min: int
  +max: int
  +greedy: bool
  +is_optional(): bool
  +is_star(): bool
  +is_plus(): bool
  
  style.fill: "#0f3460"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

CharacterClassNode: {
  shape: class
  +ranges: CharRange*
  +negated: bool
  +predefined_class: ClassType
  +contains(char): bool
  
  style.fill: "#0f3460"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

GroupNode: {
  shape: class
  +child: ASTNode*
  +group_id: int
  +capturing: bool
  +is_capturing(): bool
  
  style.fill: "#0f3460"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

LiteralNode -> ASTNode: inherits {
  style.stroke: "#3fb950"
  style.stroke-dash: 5
}

ConcatenationNode -> ASTNode: inherits {
  style.stroke: "#3fb950"
  style.stroke-dash: 5
}

