direction: right
title: Three-Valued Logic Truth Tables | M6: SELECT Execution
and_table: {
  shape: sql_table
  label: "AND"
  row1: { label: "AND"; shape: text }
  TRUE_col: { label: "TRUE"; shape: text }
  FALSE_col: { label: "FALSE"; shape: text }
  NULL_col: { label: "NULL"; shape: text }
  row_true: { label: "TRUE"; shape: text }
  true_true: { label: "TRUE"; shape: text }
  true_false: { label: "FALSE"; shape: text }
  true_null: { label: "NULL"; shape: text }
  row_false: { label: "FALSE"; shape: text }
  false_true: { label: "FALSE"; shape: text }
  false_false: { label: "FALSE"; shape: text }
  false_null: { label: "FALSE"; shape: text }
  row_null: { label: "NULL"; shape: text }
  null_true: { label: "NULL"; shape: text }
  null_false: { label: "FALSE"; shape: text }
  null_null: { label: "NULL"; shape: text }
}
and_table.row1 -> and_table.row_true -> and_table.row_false -> and_table.row_null: { style.opacity: 0 }
or_table: {
  shape: sql_table
  label: "OR"
  row1: { label: "OR"; shape: text }
  TRUE_col: { label: "TRUE"; shape: text }
  FALSE_col: { label: "FALSE"; shape: text }
  NULL_col: { label: "NULL"; shape: text }
  row_true: { label: "TRUE"; shape: text }
  true_true: { label: "TRUE"; shape: text }
  true_false: { label: "TRUE"; shape: text }
  true_null: { label: "TRUE"; shape: text }
  row_false: { label: "FALSE"; shape: text }
  false_true: { label: "TRUE"; shape: text }
  false_false: { label: "FALSE"; shape: text }
  false_null: { label: "NULL"; shape: text }
  row_null: { label: "NULL"; shape: text }
  null_true: { label: "TRUE"; shape: text }
  null_false: { label: "NULL"; shape: text }
  null_null: { label: "NULL"; shape: text }
}
or_table.row1 -> or_table.row_true -> or_table.row_false -> or_table.row_null: { style.opacity: 0 }
not_box: {
  label: "NOT\n─────────────\nNOT(TRUE)  = FALSE\nNOT(FALSE) = TRUE\nNOT(NULL)  = NULL"
  shape: rectangle
  style.stroke: "#5c5c5c"
  style.font-size: 14
}
comparison_box: {
  label: "Comparison with NULL\n─────────────────────\nNULL = 5  → NULL\nNULL < 10 → NULL\nNULL = NULL → NULL\n\nResult is always NULL (unknown)"
  shape: rectangle
  style.stroke: "#5c5c5c"
  style.font-size: 14
}
and_table -> or_table -> not_box -> comparison_box: { style.opacity: 0 }
short_circuit: {
  label: "Short-Circuit Rules"
  shape: rectangle
  style.stroke: "#2563eb"
  style.fill: "#dbeafe"
  rule1: "FALSE AND anything = FALSE"
  rule2: "TRUE OR anything = TRUE"
}
and_table -> short_circuit: { 
  label: "Row 2"
  style.stroke: "#dc2626"
  style.stroke-dash: 3
}
or_table -> short_circuit: { 
  label: "Row 1"
  style.stroke: "#16a34a"
  style.stroke-dash: 3
}
where_filter: {
  label: "WHERE Clause\n──────────────\nWHERE condition\n\nOnly TRUE passes\nFALSE and NULL rejected"
  shape: rectangle
  style.stroke: "#9333ea"
  style.fill: "#f3e8ff"
}
comparison_box -> where_filter: {
  label: "NULL never matches"
  style.stroke: "#9333ea"
}