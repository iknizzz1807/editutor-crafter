shape: sequence_diagram

title: TCP Three-Way Handshake & Data Flow

client: Client {
  shape: rectangle
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}
server: Server {
  shape: rectangle
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

client -> server: SYN
note: SEQ=1000 (Client ISN)
      Flags: SYN=1 {
  style.fill: "#0f3460"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

server -> client: SYN-ACK
note: SEQ=5000 (Server ISN)
      ACK=1001
      Flags: SYN=1, ACK=1 {
  style.fill: "#0f3460"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

client -> server: ACK
note: SEQ=1001
      ACK=5001
      Flags: ACK=1 {
  style.fill: "#0f3460"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

note: Connection Established (Data Transfer Phase) {
  style.fill: "#0f3460"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
  style.bold: true
}

client -> server: Data Segment
note: SEQ=1001
      ACK=5001
      Data Len=100 bytes
      Flags: ACK=1, PSH=1 {
  style.fill: "#0f3460"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

server -> client: ACK for Data
note: SEQ=5001
      ACK=1101 (1001 + 100)
      Flags: ACK=1 {
  style.fill: "#0f3460"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}