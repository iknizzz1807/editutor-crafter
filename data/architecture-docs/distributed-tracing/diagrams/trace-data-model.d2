direction: right

classes: {
  entity: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  relationship: {
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
}

trace: Trace {
  shape: class
  class: entity
  - trace_id: string
  - root_span_id: string
  - start_time: timestamp
  - end_time: timestamp
  - duration_ms: int64
  - service_count: int
  - span_count: int
  - status: TraceStatus
  - tags: "Map<string, string>"
}

span: Span {
  shape: class
  class: entity
  - span_id: string
  - trace_id: string
  - parent_span_id: string
  - operation_name: string
  - service_name: string
  - start_time: timestamp
  - end_time: timestamp
  - duration_ms: int64
  - status: SpanStatus
  - tags: "Map<string, string>"
  - logs: "Event[]"
}

span_context: SpanContext {
  shape: class
  class: entity
  - trace_id: string
  - span_id: string
  - parent_span_id: string
  - trace_flags: byte
  - trace_state: string
  - baggage: "Map<string, string>"
  - is_remote: boolean
}

span_event: SpanEvent {
  shape: class
  class: entity
  - timestamp: timestamp
  - name: string
  - attributes: "Map<string, string>"
  - dropped_attributes_count: int
}

span_link: SpanLink {
  shape: class
  class: entity
  - trace_id: string
  - span_id: string
  - trace_state: string
  - attributes: "Map<string, string>"
  - dropped_attributes_count: int
}

resource: Resource {
  shape: class
  class: entity
  - service_name: string
  - service_version: string
  - service_instance_id: string
  - deployment_environment: string
  - attributes: "Map<string, string>"
}

trace -> span: contains {
  class: relationship
}

span -> span: parent-child {
  class: relationship
}

span -> span_context: has context {
  class: relationship
}

span -> span_event: logs events {
  class: relationship
}

span -> span_link: links to {
  class: relationship
}

span -> resource: executed on {
  class: relationship
}