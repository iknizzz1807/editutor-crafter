direction: down

classes: {
  component: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  data_flow: {
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
  important_flow: {
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
}

title: Fuzzing Framework Component Architecture {
  near: top-center
  style.font-size: 18
  style.font-color: "#e6edf3"
  style.bold: true
}

orchestrator: Orchestrator {
  class: component
  shape: rectangle
}

executor: Executor {
  class: component
  shape: rectangle
}

coverage_tracker: Coverage Tracker {
  class: component
  shape: rectangle
}

mutation_engine: Mutation Engine {
  class: component
  shape: rectangle
}

corpus_manager: Corpus Manager {
  class: component
  shape: rectangle
}

target_program: Target Program {
  shape: rectangle
  style.fill: "#16213e"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
}

orchestrator -> corpus_manager: select seed input {
  class: data_flow
}

corpus_manager -> mutation_engine: provide input {
  class: data_flow
}

mutation_engine -> executor: mutated test inputs {
  class: important_flow
}

executor -> target_program: execute with input {
  class: data_flow
}

target_program -> executor: execution result {
  class: data_flow
}

executor -> coverage_tracker: execution trace {
  class: data_flow
}

coverage_tracker -> orchestrator: coverage feedback {
  class: important_flow
}

executor -> orchestrator: crash reports {
  class: important_flow
}

orchestrator -> corpus_manager: update corpus {
  class: data_flow
}

orchestrator -> mutation_engine: adjust strategy {
  class: data_flow
}