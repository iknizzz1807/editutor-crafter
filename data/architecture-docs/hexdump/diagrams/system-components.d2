title: System Component Architecture

classes: {
  component: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  pipeline_flow: {
    style.stroke: "#3fb950"
    style.font-color: "#8b949e"
    style.stroke-width: 2
  }
}

pipeline: Data Processing Pipeline {
  style.fill: "#16213e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"

  cli: CLI Parser {
    class: component
    shape: rectangle
  }

  reader: File Reader {
    class: component
    shape: rectangle
  }

  formatter: Hex Formatter {
    class: component
    shape: rectangle
  }

  renderer: ASCII Renderer {
    class: component
    shape: rectangle
  }

  cli -> reader: configuration {
    class: pipeline_flow
  }
  reader -> formatter: 16-byte chunks {
    class: pipeline_flow
  }
  formatter -> renderer: hex data {
    class: pipeline_flow
  }
}

input: Binary File {
  shape: page
  style.fill: "#0f3460"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

output: Formatted Output {
  shape: page
  style.fill: "#0f3460"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

input -> pipeline.reader: raw bytes {
  class: pipeline_flow
}

pipeline.renderer -> output: hex + ASCII {
  class: pipeline_flow
}