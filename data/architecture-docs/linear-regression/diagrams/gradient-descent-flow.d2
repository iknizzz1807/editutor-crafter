max_reached: Max Iterations Reached {
  class: termination
  shape: oval
}

start -> compute_cost: θ = initial values

compute_cost -> calc_gradients: J(θ)

calc_gradients -> update_params: ∇J(θ)

update_params -> check_convergence: θ = θ - α∇J(θ)

check_convergence -> converged: "|∇J(θ)| < ε" {
  style.stroke: "#3fb950"
}

check_convergence -> check_max_iter: "|∇J(θ)| ≥ ε" {
  style.stroke: "#8b949e"
}

check_max_iter -> max_reached: iterations ≥ max_iter {
  style.stroke: "#e74c3c"
}

check_max_iter -> compute_cost: iterations < max_iter {
  style.stroke: "#8b949e"
}

note: |md
  **Key Parameters:**
  - α: Learning rate
  - ε: Convergence threshold
  - θ: Model parameters
  - J(θ): Cost function
