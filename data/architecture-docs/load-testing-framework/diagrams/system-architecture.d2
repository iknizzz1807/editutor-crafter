title: System Architecture Overview

classes: {
  coordinator: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  worker: {
    style.fill: "#16213e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  system: {
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  dashboard: {
    style.fill: "#2d1b69"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
}

coordinator: Coordinator Node {
  class: coordinator
  
  orchestrator: Test Orchestrator
  config: Load Config Manager {
    shape: page
  }
  monitor: Worker Monitor
  metrics: Metrics Aggregator {
    shape: cylinder
  }
  
  orchestrator -> config: reads
  orchestrator -> monitor: manages
  monitor -> metrics: collects
}

workers: Worker Cluster {
  worker1: Worker Node 1 {
    class: worker
    engine: Load Engine
    reporter: Metrics Reporter
    engine -> reporter: generates
  }
  
  worker2: Worker Node 2 {
    class: worker
    engine: Load Engine
    reporter: Metrics Reporter
    engine -> reporter: generates
  }
  
  worker3: Worker Node N {
    class: worker
    engine: Load Engine
    reporter: Metrics Reporter
    engine -> reporter: generates
  }
}

target: Target System {
  class: system
  api: API Gateway
  services: Backend Services
  database: Database {
    shape: cylinder
  }
  
  api -> services: routes
  services -> database: queries
}

dashboard: Real-time Dashboard {
  class: dashboard
  ui: Web Interface
  charts: Metrics Charts
  alerts: Alert System
  
  ui -> charts: displays
  ui -> alerts: shows
}

coordinator.orchestrator -> workers.worker1.engine: gRPC - distribute load
coordinator.orchestrator -> workers.worker2.engine: gRPC - distribute load
coordinator.orchestrator -> workers.worker3.engine: gRPC - distribute load

workers.worker1.reporter -> coordinator.metrics: gRPC - report metrics
workers.worker2.reporter -> coordinator.metrics: gRPC - report metrics
workers.worker3.reporter -> coordinator.metrics: gRPC - report metrics

workers.worker1.engine -> target.api: HTTP - load traffic
workers.worker2.engine -> target.api: HTTP - load traffic
workers.worker3.engine -> target.api: HTTP - load traffic

coordinator.metrics -> dashboard.ui: HTTP - real-time data

coordinator.orchestrator.style.stroke: "#e17055"
coordinator.orchestrator.style.bold: true