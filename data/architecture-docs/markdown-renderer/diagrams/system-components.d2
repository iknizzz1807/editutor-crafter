title: System Component Architecture

classes: {
  component: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  
  data_structure: {
    style.fill: "#16213e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.double-border: true
  }
  
  flow: {
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
}

input: Raw Markdown Text {
  shape: page
  style.fill: "#0f3460"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

lexer: Lexer {
  class: component
}

block_parser: Block Parser {
  class: component
}

inline_parser: Inline Parser {
  class: component
}

ast: Abstract Syntax Tree (AST) {
  class: data_structure
  near: center-center
}

html_generator: HTML Generator {
  class: component
}

output: Generated HTML {
  shape: page
  style.fill: "#0f3460"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

input -> lexer: tokenize {
  class: flow
}

lexer -> block_parser: tokens {
  class: flow
}

block_parser -> ast: creates block nodes {
  class: flow
}

ast -> inline_parser: traverses & processes {
  class: flow
}

inline_parser -> ast: adds inline nodes {
  class: flow
}

ast -> html_generator: traverses complete tree {
  class: flow
}

html_generator -> output: renders {
  class: flow
}