direction: right

title: "Core Data Model - Entity Relationships" {
  near: top-center
  style.font-size: 20
  style.font-color: "#e6edf3"
  style.bold: true
}

# Feature Entity
feature: |md
  **Feature**

  Fields:
  - id: UUID
  - name: string
  - description: string
  - feature_type: FeatureType
  - data_source: string
  - transformation_logic: string
  - version: int
  - created_at: timestamp
  - updated_at: timestamp
  - schema: JSONSchema
  - tags: string[]
  - owner: string
  - status: FeatureStatus
| {
  shape: rectangle
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

# Model Entity
model: |md
  **Model**

  Fields:
  - id: UUID
  - name: string
  - description: string
  - model_type: ModelType
  - framework: string
  - version: string
  - created_at: timestamp
  - updated_at: timestamp
  - hyperparameters: JSON
  - metrics: JSON
  - artifact_uri: string
  - status: ModelStatus
  - owner: string
  - tags: string[]
| {
  shape: rectangle
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

# Training Run Entity
training_run: |md
