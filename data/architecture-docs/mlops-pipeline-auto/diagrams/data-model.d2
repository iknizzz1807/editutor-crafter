  - experiment_name: string
  - run_name: string
  - start_time: timestamp
  - end_time: timestamp
  - status: RunStatus
  - config: JSON
  - metrics: JSON
  - artifacts: string[]
  - logs_uri: string
  - compute_resources: JSON
  - triggerd_by: string
