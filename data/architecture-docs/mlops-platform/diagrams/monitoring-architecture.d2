title: Model Monitoring Data Flow

classes: {
  process: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  storage: {
    style.fill: "#16213e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  analysis: {
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  alert: {
    style.fill: "#d63031"
    style.stroke: "#e17055"
    style.font-color: "#ffffff"
    style.bold: true
  }
  dashboard: {
    style.fill: "#6c5ce7"
    style.stroke: "#a29bfe"
    style.font-color: "#ffffff"
  }
}

inference_requests: Inference Requests {
  shape: parallelogram
  class: process
}

prediction_capture: Prediction Capture System {
  class: process
}

prediction_storage: {
  log_store: Prediction Logs {
    shape: cylinder
    class: storage
  }
  
  feature_store: Feature Data {
    shape: cylinder
    class: storage
  }
}

drift_analysis: {
  drift_detector: Drift Detection Engine {
    class: analysis
  }
  
  metric_engine: Metric Aggregation {
    class: analysis
  }
}

alert_system: Alert Evaluation {
  shape: diamond
  class: alert
}

dashboard_updates: {
  metrics_dashboard: Performance Dashboard {
    class: dashboard
  }
  
  alerts_panel: Alert Management {
    class: dashboard
  }
}

notification: Notifications {
  shape: cloud
  class: alert
}

inference_requests -> prediction_capture: capture predictions
prediction_capture -> prediction_storage.log_store: store logs
prediction_capture -> prediction_storage.feature_store: store features

prediction_storage.log_store -> drift_analysis.drift_detector: analyze distributions
prediction_storage.feature_store -> drift_analysis.drift_detector: compare baselines

prediction_storage.log_store -> drift_analysis.metric_engine: compute metrics
drift_analysis.drift_detector -> drift_analysis.metric_engine: drift scores

drift_analysis.metric_engine -> alert_system: evaluate thresholds
alert_system -> notification: trigger alerts
alert_system -> dashboard_updates.alerts_panel: update status

drift_analysis.metric_engine -> dashboard_updates.metrics_dashboard: real-time updates
dashboard_updates.alerts_panel -> dashboard_updates.metrics_dashboard: alert context