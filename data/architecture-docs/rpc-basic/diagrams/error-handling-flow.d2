direction: down

classes: {
  error_node: {
    style.fill: "#d63031"
    style.stroke: "#e17055"
    style.font-color: "#ffffff"
    style.bold: true
  }
  process_node: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  decision_node: {
    style.fill: "#16213e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  success_node: {
    style.fill: "#00b894"
    style.stroke: "#00a085"
    style.font-color: "#ffffff"
    style.bold: true
  }
}

start: Start {
  shape: circle
  class: success_node
}

error_occurred: Error Occurred {
  shape: diamond
  class: decision_node
}

check_error_type: Check Error Type {
  shape: diamond
  class: decision_node
}

network_error: Network Error? {
  shape: diamond
  class: decision_node
}

timeout_error: Timeout Error? {
  shape: diamond
  class: decision_node
}

serialization_error: Serialization Error? {
  shape: diamond
  class: decision_node
}

method_not_found: Method Not Found? {
  shape: diamond
  class: decision_node
}

execution_error: Execution Error? {
  shape: diamond
  class: decision_node
}

retry_logic: Apply Retry Logic {
  class: process_node
}

timeout_handling: Apply Timeout Handling {
  class: process_node
}

check_retry_count: Max Retries Reached? {
  shape: diamond
  class: decision_node
}

validate_data: Validate Input Data {
  class: process_node
}

return_method_error: Return Method Not Found Error {
  class: error_node
}

log_execution_error: Log Execution Details {
  class: process_node
}

return_execution_error: Return Execution Error {
  class: error_node
}

return_network_error: Return Network Error {
  class: error_node
}

return_timeout_error: Return Timeout Error {
  class: error_node
}

return_serialization_error: Return Serialization Error {
  class: error_node
}

success: Success {
  shape: circle
  class: success_node
}

start -> error_occurred

error_occurred -> check_error_type: Yes
error_occurred -> success: No

check_error_type -> network_error

network_error -> retry_logic: Yes
network_error -> timeout_error: No

retry_logic -> check_retry_count

check_retry_count -> timeout_handling: No
check_retry_count -> return_network_error: Yes

timeout_handling -> return_timeout_error

timeout_error -> return_timeout_error: Yes
timeout_error -> serialization_error: No

serialization_error -> validate_data: Yes
serialization_error -> method_not_found: No

validate_data -> return_serialization_error

method_not_found -> return_method_error: Yes
method_not_found -> execution_error: No

execution_error -> log_execution_error: Yes

log_execution_error -> return_execution_error