system_component_overview: "System Component Overview" {
  style.fill: "#1a1a2e"
  style.font-color: "#e6edf3"
  style.stroke: "#3fb950"

  user: User {
    shape: person
    style.bold: true
  }

  network: Network Connections {
    style.stroke: "#8b949e"
    style.stroke-dash: 2

    http_gateway: HTTP Gateway {
      shape: cloud
      style.stroke: "#3fb950"
      style.stroke-width: 2
      style.bold: true
    }
  }

  control_plane: Control Plane {
    style.fill: "#16213e"

    controller: Controller {
      shape: hexagon
      style.stroke: "#3fb950"
      style.stroke-width: 2
      style.bold: true
    }
  }

  execution_plane: Execution Plane {
    style.fill: "#16213e"

    worker_pool: Worker Pool {
      style.fill: "#0f3460"

      warm_instances: Warm Instances {
        style.multiple: true
        style.stroke: "#3fb950"
        style.stroke-width: 2
        style.bold: true

        instance1: "Warm Instance 1"
        instance2: "Warm Instance 2"
        instance3: "Warm Instance 3"
        instance1.shape: circle
        instance2.shape: circle
        instance3.shape: circle
      }

      cold_instances: Cold Instances {
        style.multiple: true
        style.stroke: "#d0d7de"

        instance1: "Cold Instance 1" {
          style: {
            fill: "#0f3460"
            stroke-dash: 2
          }
        }
        instance2: "Cold Instance 2" {
          style: {
            fill: "#0f3460"
            stroke-dash: 2
          }
        }
        instance1.shape: circle
        instance2.shape: circle
      }
    }
  }

  data_plane: Data Plane {
    style.fill: "#16213e"

    storage: Storage {
      shape: cylinder
      style.stroke: "#3fb950"
      style.stroke-width: 2
      style.bold: true
    }
  }
}

user -> http_gateway: "1. API Request (HTTP/HTTPS)" {
  style.stroke: "#e6edf3"
  style.bold: true
}
http_gateway -> controller: "2. Route & Authenticate" {
  style.stroke: "#e6edf3"
  style.bold: true
}
controller -> worker_pool.warm_instances: "3. Execute on Warm Instance" {
  style.stroke: "#3fb950"
  style.stroke-width: 2
  style.bold: true
}
worker_pool.warm_instances -> storage: "4. Read/Write Data" {
  style.stroke: "#e6edf3"
  style.bold: true
}
storage -> worker_pool.warm_instances: "5. Return Data" {
  style.stroke: "#e6edf3"
  style.bold: true
}
worker_pool.warm_instances -> controller: "6. Return Result" {
  style.stroke: "#e6edf3"
  style.bold: true
}
controller -> http_gateway: "7. Format Response" {
  style.stroke: "#e6edf3"
  style.bold: true
}
http_gateway -> user: "8. HTTP Response" {
  style.stroke: "#e6edf3"
  style.bold: true
}

controller -> worker_pool.cold_instances: "On Cold Start: 3a. Initialize & Execute" {
  style.stroke: "#d0d7de"
  style.stroke-dash: 2
}
worker_pool.cold_instances -> worker_pool.warm_instances: "Promoted to Warm" {
  style.stroke: "#d0d7de"
  style.stroke-dash: 2
}