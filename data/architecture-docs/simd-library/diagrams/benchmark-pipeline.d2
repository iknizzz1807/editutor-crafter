  class: measurement
  
  timer: High-Resolution Timer {
    shape: rectangle
    class: measurement
  }
  
  warmup: CPU Warmup Phase {
    shape: rectangle
    class: measurement
  }
  
  iterations: Multiple Iterations {
    shape: rectangle
