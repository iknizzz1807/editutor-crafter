  class: output
  
  baseline: Baseline Metrics {
    shape: rectangle
    class: output
  }
  
  speedup: Speedup Ratios {
    shape: rectangle
    class: output
  }
  
  efficiency: Vectorization Efficiency {
    shape: rectangle
    class: output
  }
}

