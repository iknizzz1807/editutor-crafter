classes: {
  keyword: {
    style.fill: "#d63031"
    style.font-color: "#ffffff"
    style.stroke: "#e17055"
    style.bold: true
  }
  identifier: {
    style.fill: "#0984e3"
    style.font-color: "#ffffff"
    style.stroke: "#74b9ff"
    style.bold: true
  }
  literal: {
    style.fill: "#00b894"
    style.font-color: "#ffffff"
    style.stroke: "#00cec9"
    style.bold: true
  }
  operator: {
    style.fill: "#fdcb6e"
    style.font-color: "#2d3436"
    style.stroke: "#e17055"
    style.bold: true
  }
  punctuation: {
    style.fill: "#6c5ce7"
    style.font-color: "#ffffff"
    style.stroke: "#a29bfe"
    style.bold: true
  }
  container: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
}

token_types: Token Type Classification {
  class: container

  keywords: Keywords {
    class: keyword
    shape: rectangle
    SELECT
    FROM
    WHERE
    INSERT
    UPDATE
    DELETE
    JOIN
    "GROUP BY"
    "ORDER BY"
  }

  identifiers: Identifiers {
    class: identifier
    shape: rectangle
    table_name
    column_name
    alias
    database_name
    user_id
    first_name
  }

  literals: Literals {
    class: literal
    shape: rectangle
    "String: 'Hello World'"
    "Number: 42, 3.14"
    "Boolean: TRUE, FALSE"
    "Date: '2024-01-15'"
    NULL
  }

  operators: Operators {
    class: operator
    shape: rectangle
    "Arithmetic: +, -, *, /"
    "Comparison: =, <>, <, >"
    "Logical: AND, OR, NOT"
    "Pattern: LIKE, IN"
    "Assignment: :="
  }

  punctuation: Punctuation {
    class: punctuation
    shape: rectangle
    "Parentheses: ( )"
    "Comma: ,"
    "Semicolon: ;"
    "Dot: ."
    "Quotes: ', \""
    "Brackets: [ ]"
  }
}

sql_example: SQL Example {
  class: container
  
  example_text: |md
    **Example SQL:**
    ```sql
    SELECT user_id, first_name 
    FROM users 
    WHERE age > 18;
    ```
  | {
    shape: page
    style.fill: "#16213e"
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }

  breakdown: Token Breakdown {
    class: container
    shape: rectangle
    "SELECT → Keyword"
    "user_id → Identifier"
    ", → Punctuation"
    "first_name → Identifier"
    "FROM → Keyword"
    "users → Identifier"
    "WHERE → Keyword"
    "age → Identifier"
    "> → Operator"
    "18 → Literal"
    "; → Punctuation"
  }
}

token_types.keywords -> sql_example.breakdown: categorizes
token_types.identifiers -> sql_example.breakdown: categorizes
token_types.literals -> sql_example.breakdown: categorizes
token_types.operators -> sql_example.breakdown: categorizes
token_types.punctuation -> sql_example.breakdown: categorizes

sql_example.example_text -> sql_example.breakdown: tokenizes into