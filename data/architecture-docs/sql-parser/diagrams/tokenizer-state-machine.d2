tokenizer_state_machine: Tokenizer State Machine {
  style.fill: "#1a1a2e"
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

classes: {
  initial_state: {
    style.fill: "#3fb950"
    style.stroke: "#3fb950"
    style.font-color: "#1a1a2e"
  }
  normal_state: {
    style.fill: "#16213e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  active_state: {
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  end_state: {
    style.fill: "#16213e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.double-border: true
  }
  transition: {
    style.stroke: "#8b949e"
    style.font-color: "#e6edf3"
  }
}

start: {
  shape: circle
  class: initial_state
  label: ""
}

normal: Normal {
  shape: circle
  class: normal_state
}

in_string: InString {
  shape: circle
  class: active_state
}

in_number: InNumber {
  shape: circle
  class: active_state
}

in_identifier: InIdentifier {
  shape: circle
  class: active_state
}

in_comment: InComment {
  shape: circle
  class: active_state
}

error: Error {
  shape: circle
  style.fill: "#d63031"
  style.stroke: "#e17055"
  style.font-color: "#ffffff"
}

end: End {
  shape: circle
  class: end_state
}

start -> normal: {
  class: transition
  label: "start"
}

normal -> in_string: {
  class: transition
  label: "quote (' or \")"
}

normal -> in_number: {
  class: transition
  label: "digit (0-9)"
}

normal -> in_identifier: {
  class: transition
  label: "letter (a-z, A-Z, _)"
}

normal -> in_comment: {
  class: transition
  label: "-- or /*"
}

normal -> normal: {
  class: transition
  label: "whitespace, operators"
}

normal -> end: {
  class: transition
  label: "EOF"
}

in_string -> normal: {
  class: transition
  label: "closing quote"
}

in_string -> in_string: {
  class: transition
  label: "any char, escape seq"
}

in_string -> error: {
  class: transition
  label: "EOF (unterminated)"
}

in_number -> normal: {
  class: transition
  label: "non-digit, whitespace"
}

in_number -> in_number: {
  class: transition
  label: "digit, decimal point"
}

in_identifier -> normal: {
  class: transition
  label: "non-alphanumeric"
}

in_identifier -> in_identifier: {
  class: transition
  label: "letter, digit, _"
}

in_comment -> normal: {
  class: transition
  label: "*/ or newline"
}

in_comment -> in_comment: {
  class: transition
  label: "any char"
}

error -> end: {
  class: transition
  label: "report error"
}