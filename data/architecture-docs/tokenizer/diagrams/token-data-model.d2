classes: {
  primary_class: {
    style.fill: "#1a1a2e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
    style.bold: true
  }
  enum_class: {
    style.fill: "#16213e"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
  utility_class: {
    style.fill: "#0f3460"
    style.stroke: "#3fb950"
    style.font-color: "#e6edf3"
  }
}

Token: {
  shape: class
  class: primary_class
  - "token_type: TokenType"
  - "lexeme: string"
  - "position: Position"
  + "new(type: TokenType, lexeme: string, pos: Position): Token"
  + "to_string(): string"
  + "get_location(): string"
}

TokenType: {
  shape: class
  class: enum_class
  - "NUMBER"
  - "STRING"
  - "IDENTIFIER"
  - "KEYWORD"
  - "OPERATOR"
  - "PUNCTUATION"
  - "WHITESPACE"
  - "COMMENT"
  - "EOF"
  - "INVALID"
}

Position: {
  shape: class
  class: utility_class
  - "line: int"
  - "column: int"
  - "offset: int"
  + "new(line: int, col: int, offset: int): Position"
  + "advance_line(): void"
  + "advance_column(): void"
  + "to_string(): string"
}

examples: Token Examples {
  style.fill: "#16213e"
  style.stroke: "#8b949e"
  style.font-color: "#e6edf3"
  
  number_token: |md
    **NUMBER Token**
    type: NUMBER
    lexeme: "42"
    position: (5, 10, 89)
  | {
    shape: page
    style.fill: "#0f3460"
    style.font-color: "#e6edf3"
  }
  
  keyword_token: |md
    **KEYWORD Token**
    type: KEYWORD
    lexeme: "function"
    position: (12, 1, 234)
  | {
    shape: page
    style.fill: "#0f3460"
    style.font-color: "#e6edf3"
  }
  
  string_token: |md
    **STRING Token**
    type: STRING
    lexeme: "Hello World"
    position: (8, 15, 156)
  | {
    shape: page
    style.fill: "#0f3460"
    style.font-color: "#e6edf3"
  }
}

Token -> TokenType: has type {
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

Token -> Position: tracks location {
  style.stroke: "#3fb950"
  style.font-color: "#e6edf3"
}

examples.number_token -> Token: instance of {
  style.stroke: "#8b949e"
  style.stroke-dash: 3
}

examples.keyword_token -> Token: instance of {
  style.stroke: "#8b949e"
  style.stroke-dash: 3
}

examples.string_token -> Token: instance of {
  style.stroke: "#8b949e"
  style.stroke-dash: 3
}